<meta name="viewport" content="width=768">
  <% if params[:adm].blank? %>
    <%= link_to "Kembali Ke Profil", perse_path(@perse, flg: true), class: "badge badge-pill badge-success", style: "font-size: 12px; margin-top: 10px" %>
    
  <% end %>
  <%= link_to "Kemaskini Borang", edit_ddk_path(@ddk, adm: params[:adm]), class: "badge badge-pill badge-warning", style: "font-size: 12px; margin-top: 10px" %>
  <%= link_to "Versi PDF", prtddk_path(id: @ddk.id), class: "badge badge-pill badge-info", style: "font-size: 12px; margin-top: 10px", target: "_blank" %><br>

  <% 
    arr = $ddkstat[@ddk.stat]
    clr = arr[0]
    stat = arr[1]
    desc = arr[2]
  %>

  <%= link_to "#{stat}", "#", class: "btn btn-sm btn-#{clr} btn-block", style: "font-size: 15px; margin-top: 5px; font-weight: 700" %>
  <p style="margin-bottom: -5px; color: red; font-size: 10px">
    * <%= desc%> 
    <% if @ddk.stat == "1" %>
      <!-- <a href=""><u>anisselangor@gmail.com</u></a><br> -->
      <p style="margin-bottom: -0px; color: black; font-size: 12px; font-weight: 600; margin-top: 5px">Senarai Dokumen Yang Perlu Dimuatnaik</p>
      <ol style="color: black; font-size: 12px; margin-bottom: -10px; margin-left: -25px; text-align: justify">
        <li>Borang Profil lengkap Institusi Pendidikan Anak Istimewa (borang yang diisi di website)</li>
        <li>Salinan sijil pendaftaran pertubuhan/sijil pendaftaran dengan undang-undang tubuh yang disahkan oleh Pendaftar Pertubuhan (ROS)/ Suruhanjaya Syarikat Malaysia (SSM)</li>
        <li>Senarai nama dan salinan sijil akademik kakitangan institusi</li>
        <li>Salinan penyata bank akaun institusi</li>
        <li>Salinan kertas kerja program yang akan dilaksanakan</li>
      </ol>   
    <% end %>
  </p>

  <%= render 'ddks/prt-form'%>

</meta>