<%= form_for @foto, :html => { multipart: true, :class => "form-horizontal image" } do |f| %>
  
  <div class="form-group">
    <%= f.label :foto_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :foto_name, :class => 'form-control', disabled: true %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= image_tag(@foto.picture.url, size: "500x500") if @foto.picture? %>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,application/pdf' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>