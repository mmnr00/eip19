<div class="row">
    <div class="col-sm-12">
      <div class="card mb-3">
        <div class="card-header" style="color: white; font-size: 13px">
          <i class="fas fa-calendar"></i>&nbsp
          <strong><%= "Jadual Untuk #{@proge.name}"%></strong><br>
          <%= "#{@proge.date.strftime('%d-%^b-%Y')} hingga #{@proge.daten.strftime('%d-%^b-%Y')}" %>
        </div>
        <div class="card-body" style="font-size: 12px;">
          <div class="table-responsive">
            <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
              <thead style="background-color: #cc99cc; color: black">
                <tr>
                  <th style="width: 15%"> MASA </th>
                  <th style="width: 25%"> TAJUK </th>
                  <th style="width: 20%"> PENCERAMAH </th>
                  <th> PENGISIAN </th>
                </tr>
              </thead>
              <tbody style=" color: black">
                <% @proge.cntps.order('start ASC').each do |prg| %><tr>
                  <td>
                    <%= prg.start.strftime("%I:%M %p") %> -
                    <%= prg.end.strftime("%I:%M %p") %>
                  </td>
                  <% if (prg.title.include? "REHAT") %>
                    <td colspan=3 style="text-align: center; background-color: #ffff32">
                      <b><%= prg.title %></b>
                    </td>
                  <% else %>
                    <td>
                      <%= prg.title %>
                      <% if adm == 1 %>
                        <br>
                        <%= link_to "Kemaskini", editcntp_path(cntp: prg.id), class: 'badge badge-pill badge-warning'%>
                        <%= link_to "Buang", rmvcntp_path(cntp: prg.id), class: 'badge badge-pill badge-danger', data: {confirm: "Adakah Anda Pasti?"}%>
                      <% end %>
                    </td>
                    <td>
                      <%= prg.lec %>
                    </td>
                    <td>
                      <%= sanitize prg.ctn %>
                    </td>
                  <% end %>
                <% end %></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    

    </div> <!-- END COL -->
</div>