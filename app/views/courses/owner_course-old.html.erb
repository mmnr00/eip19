<div class="card mb-3">
  <div class="card-header" style="background-color:#0050be">
    <h3 align="center" style="color:white"> View Course <%= @course.name %> </h3>
  </div>
</div>

<%= render 'tchdetails/lookup' %>

<% if @course_teachers.present? %>
  <div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-search"></i>
    VIEWING ALL TEACHERS
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th> NO </th>
            <th> FULL NAME </th>
            <th> I/C NO </th>
            <th> EMAIL  </th>
            <th> PHONE NUMBER  </th>
            <th> FULL PROFILE  </th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th> NO </th>
            <th> FULL NAME </th>
            <th> I/C NO </th>
            <th> EMAIL  </th>
            <th> PHONE NUMBER  </th>
            <th> FULL PROFILE  </th>
          </tr>
        </foot>
        <tbody>
          <% counter = 1 %>
          <% @course_teachers.each do |teacher|%>
            <tr>
              <td><%= counter %></td>
              <td><%= teacher.tchdetail.name.upcase %></td>
              <td><%= "#{teacher.tchdetail.ic_1}-""#{teacher.tchdetail.ic_2}-""#{teacher.tchdetail.ic_3}" %></td>
              <td><%= teacher.email %></td>
              <td><%= "#{teacher.tchdetail.phone_1}-""#{teacher.tchdetail.phone_2}" %></td>
              <td><%= link_to "VIEW", tchdetail_path(teacher.tchdetail, owner_id: current_owner.id), class: "btn btn-sm btn-info active" %></td>
            </tr>
          <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %>
  No student had signed up for this course
<% end %>

<%= render 'js-script/datatables-demo' %>
<%= render 'js-script/jquery-datatables' %>