<div class="card mb-3">
  <div class="card-header" style="background-color:#0050be">
    <h3 align="center" style="color:white"> New course for <%= @college.name %> </h3>
  </div>
</div>

<h3>  </h3>

<div class='row'>
  <div class='col-lg-12'>
    <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <!-- name -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Course Name", autofocus: true %>
        </div>
      </div>

      <!-- description -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", placeholder: "Course Description", autofocus: true %>
        </div>
      </div>

      <!-- base fee -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :fee %>
        </div>
        <div class="col-sm-2">
          <%= f.number_field :base_fee, rows: 10, class: "form-control", :step => 0.01,placeholder: "e.g 32.10" %>
        </div>
      </div>


      <div>
        <%= f.hidden_field :college_id, value: @college.id %>
        <%= f.hidden_field :college, value: @college %> <!-- To render show owner page -->
        <%= f.hidden_field :id, value: current_owner.id %>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
  </div>

</div>

