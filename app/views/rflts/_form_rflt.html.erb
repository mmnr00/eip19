<%
  if @rflt.id.present?
    # OT
    osensf = @rflt.osens
    obeobf = @rflt.obeob
    ocogf = @rflt.ocog
    ogmtrf = @rflt.ogmtr
    ofmtrf = @rflt.ofmtr
    # ST
    spref = @rflt.spre
    srecf = @rflt.srec
    sexprf = @rflt.sexpr
    # AT
    ahrf = @rflt.ahr
    atinf = @rflt.atin
    aearf = @rflt.aear
    arespf = @rflt.aresp
    # PT
    pgmtrf = @rflt.pgmtr
    pmovf = @rflt.pmov
    pendrf = @rflt.pendr
  else
    # OT
    @ote.present? ? osensf = @ote.sens : osensf = "NO INPUT"
    @ote.present? ? obeobf = @ote.beob : obeobf = "NO INPUT"
    @ote.present? ? ocogf = @ote.cog : ocogf = "NO INPUT"
    @ote.present? ? ogmtrf = @ote.gmtr : ogmtrf = "NO INPUT"
    @ote.present? ? ofmtrf = @ote.fmtr : ofmtrf = "NO INPUT"
    # ST
    @ste.present? ? spref = @ste.pre : spref = "NO INPUT"
    @ste.present? ? srecf = @ste.rec : srecf = "NO INPUT"
    @ste.present? ? sexprf = @ste.expr : sexprf = "NO INPUT"
    # AT
    @ate.present? ? ahrf = @ate.hr : ahrf = "NO INPUT"
    @ate.present? ? aatinf = @ate.tin : aatinf = "NO INPUT"
    @ate.present? ? aaearf = @ate.ear : aaearf = "NO INPUT"
    @ate.present? ? aarespf = @ate.resp : aarespf = "NO INPUT"
    # PT
    @pte.present? ? pgmtrf = @pte.gmtr : pgmtrf = "NO INPUT"
    @pte.present? ? pmovf = @pte.mov : pmovf = "NO INPUT"
    @pte.present? ? pendrf = @pte.endr : pendrf = "NO INPUT"
  end
%>

<%= form_for(@rflt, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

