<div style="background-color: #2894f4; text-align: center; margin-bottom: 10px">
  <h3 style="color: white">Maklumat Peserta</h3>
</div>
<div style=" margin-bottom: 10px">
  <a style="color: red">*</a> <a style="font-size: 15px;">Wajib Diisi</a>
</div>

<div class='row container'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@perse, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

        
      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.text_field :name, class: "form-control", placeholder: "NAMA PENUH SEPERTI MYKAD", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- IC -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO MYKAD<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <% 
              if @perse.ic.present?
                icf = @perse.ic
              else
                icf = params[:ic]
              end
            %>
            <%= f.number_field :ic, class: "form-control", placeholder: "e.g. 870829015436 (no dash)", value: icf,  autofocus: true, required: true, readonly: true %>
          </div>
        </div>
      </div>

      

      <div class="form-group"> <!-- ph -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO TELEFON<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.number_field :ph, class: "form-control", placeholder: "e.g. 0174151557", autofocus: true, required: true %>
          </div>
        </div>
        <i>Maklumat ini akan digunakan untuk log masuk</i>
      </div>

      <div class="form-group"> <!-- alamat -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>ALAMAT<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.text_area :add, class: "form-control", placeholder: "MASUKKAN ALAMAT PENUH", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>

      

      <%= f.hidden_field :id, value: params[:id] %>
      <%= f.hidden_field :proge, value: params[:proge] %>
      <%= f.hidden_field :perproge, value: params[:perproge] %>
      <%= f.hidden_field :prog, value: params[:prog] %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :Hantar,  class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
    
  </div>
</div>