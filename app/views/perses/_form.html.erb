<div style="background-color: #2894f4; text-align: center; margin-bottom: 10px">
  <h3 style="color: white">Maklumat Individu</h3>
</div>
<div style=" margin-bottom: 10px">
  <a style="color: red">*</a> <a style="font-size: 15px;">Wajib Diisi</a>
</div>

<div class='row container'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@perse, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

        
      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.text_field :name, class: "form-control", placeholder: "NAMA PENUH SEPERTI MYKAD", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- IC -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO MYKAD<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <% 
              if @perse.ic.present?
                icf = @perse.ic
              else
                icf = params[:ic]
              end
            %>
            <%= f.number_field :ic, class: "form-control", placeholder: "e.g. 870829015436 (tiada -)", value: icf,  autofocus: true, required: true, readonly: true %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- alamat -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>ALAMAT<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.text_area :add, class: "form-control", placeholder: "MASUKKAN ALAMAT PENUH", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- ph -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO TELEFON<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.number_field :ph, class: "form-control", placeholder: "e.g. 0174151557", autofocus: true, required: true %>
          </div>
        </div>
        <i>Maklumat ini akan digunakan untuk log masuk</i>
      </div>

      <div class="form-group"> <!-- alamat -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>EMAIL<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.email_field :email, class: "form-control", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <% if params[:prog] == "AKADEMI ANIS" && Proge.find(params[:proge]).tp == "SEMINAR ANIS"  %>
        <div class="form-group"> <!-- HOUSEHOLD MONTHLY INCOME (RM) -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>LATAR BELAKANG PESERTA<a style="color: red">*</a></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.select :backg, options_for_select(["Ibubapa atau Penjaga Anak Istimewa",
                                                      "Pendidik Anak Istimewa (Taska/Tadika)",
                                                      "Pendidik Anak Istimewa (SK/SMK-Perdana)",
                                                      "Pendidik Anak Istimewa (SK/SMK- PPKI)",
                                                      "Pendidik Anak Istimewa (SK/SMK- Inklusif)",
                                                      "Pengusaha Institusi Pendidikan Anak Istimewa/Badan Kebajikan",
                                                      "Pendidik Anak Istimewa (PPKI)",
                                                      "Pendidik Anak Istimewa (PDK)",
                                                      "Pendidik Anak Istimewa (TADIKA)",
                                                      "Orang Awam"
                                                  ], 
                                                  selected: @perse.backg), 
            {include_blank: "Pilih Satu"}, {required: true} %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- HOUSEHOLD MONTHLY INCOME (RM) -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>PENDAPATAN ISI RUMAH (RM)<a style="color: red">*</a></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.select :inc, options_for_select(["Lebih dari RM10,000", 
                                                  "RM5,001 to RM10,000", 
                                                  "Kurang dari RM5,000"
                                                  ], 
                                                  selected: @perse.inc), 
            {include_blank: "Pilih Satu"}, {required: true} %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- BANGSA -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>TANDAKAN KATEGORI OKU ANAK ANDA</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.select :kdoku, options_for_select(["Masalah Penglihatan",
                                                  "Masalah Pendengaran",
                                                  "Masalah Pertuturan",
                                                  "Masalah Fizikal",
                                                  "Masalah Pembelajaran",
                                                  "Masalah Mental",
                                                  "Masalah Pelbagai"
                                                  ], 
                                                  selected: @perse.kdoku), 
            {include_blank: "Pilih Satu"} %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- IC -->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NYATAKAN DIAGNOSIS ANAK ANDA</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.text_area :kdiag, class: "form-control",  autofocus: true %>
            </div>
          </div>
        </div>
      <% end %> <!-- END SEMINAR ANIS -->

      <% if params[:prog] == "AKADEMI ANIS" && (Proge.find(params[:proge]).tp.include? "CIKGU ANIS")  %>
        <div class="form-group"> <!-- HOUSEHOLD MONTHLY INCOME (RM) -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>LATAR BELAKANG PESERTA<a style="color: red">*</a></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.select :backg, options_for_select(["Pendidik Anak Istimewa (PPKI)",
                                                      "Pendidik Anak Istimewa (PDK)",
                                                      "Pendidik Anak Istimewa (TADIKA)"
                                                  ], 
                                                  selected: @perse.backg), 
            {include_blank: "Pilih Satu"}, {required: true} %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- BANGSA -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>TANDAKAN KATEGORI OKU MURID ANDA<a style="color: red">*</a></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "1") }, 1, nil %> Masalah Penglihatan <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "2")}, 2, nil%> Masalah Pendengaran <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "3")}, 3, nil %> Masalah Pertuturan <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "4")}, 4, nil %> Masalah Fizikal <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "5")}, 5, nil %> Masalah Pembelajaran <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "6")}, 6, nil %> Masalah Mental <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "7")}, 7, nil %> Masalah Pelbagai <br>
              <%= f.check_box :stdoku, {multiple: true, checked: (@perse.stdoku.include? "8")}, 8, nil %> Belum/Tiada Diagnosis <br>
            </div>
          </div>
        </div>

      <% end %> <!-- END CIKGU ANIS -->

      <% if params[:prog] == "AKADEMI ANIS" && (Proge.find(params[:proge]).tp.include? "SEMINAR SUKARELAWAN")  %>
        <div class="form-group"> <!-- HOUSEHOLD MONTHLY INCOME (RM) -->
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <strong>LATAR BELAKANG SUKARELAWAN<a style="color: red">*</a></strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.select :backgs, options_for_select(["Peserta KOHOT 2021",
                                                        "Pelajar UNISEL",
                                                        "Sukarelawan Kesihatan Komuniti (SUKA)",
                                                        "Lain-lain: <Nyatakan Dibawah>"
                                                  ], 
                                                  selected: @perse.backgs), 
            {include_blank: "Pilih Satu"}, {required: true} %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- IC -->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>LATAR BELAKANG LAIN</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <%= f.text_field :backgoth, class: "form-control",  autofocus: true %>
            </div>
          </div>
        </div>

        

      <% end %> <!-- END SUKARELAWAN -->

      <div class="form-group"> <!-- BANGSA -->
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <strong>BANGSA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.select :race, options_for_select(["Melayu/Bumiputera", 
                                                "Cina", 
                                                "India",
                                                "Lain-lain"
                                                ], 
                                                selected: @perse.race), 
          {include_blank: "Pilih Satu"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- GENDER -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>JANTINA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.select :gdr, options_for_select(["Lelaki","Perempuan"], 
                                                selected: @perse.gdr), 
          {include_blank: "Pilih Satu"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- DUN -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>DUN<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.select :dun, options_for_select(["BUKAN SELANGOR",
                                                  "Balakong",
                                                  "Bandar Baru Klang",
                                                  "Bandar Utama",
                                                  "Banting",
                                                  "Batang Kali",
                                                  "Batu Tiga",
                                                  "Bukit Antarabangsa",
                                                  "Bukit Gasing",
                                                  "Bukit Lanjan",
                                                  "Bukit Melawati",
                                                  "Dengkil",
                                                  "Dusun Tua",
                                                  "Gombak Setia",
                                                  "Hulu Bernam",
                                                  "Hulu Kelang",
                                                  "Ijok",
                                                  "Jeram",
                                                  "Kajang",
                                                  "Kampung Tunku",
                                                  "Kinrara",
                                                  "Kota Anggerik",
                                                  "Kota Damansara",
                                                  "Kota Kemuning",
                                                  "Kuala Kubu Baharu",
                                                  "Kuang",
                                                  "Lembah Jaya",
                                                  "Meru",
                                                  "Morib",
                                                  "Pandamaran",
                                                  "Pandan Indah",
                                                  "Paya Jaras",
                                                  "Pelabuhan Klang",
                                                  "Permatang",
                                                  "Rawang",
                                                  "Sabak",
                                                  "Sekinchan",
                                                  "Selat Klang",
                                                  "Sementa",
                                                  "Semenyih",
                                                  "Sentosa",
                                                  "Seri Kembangan",
                                                  "Seri Serdang",
                                                  "Seri Setia",
                                                  "Sijangkang",
                                                  "Subang Jaya",
                                                  "Sungai Air Tawar",
                                                  "Sungai Burong",
                                                  "Sungai Kandis",
                                                  "Sungai Panjang",
                                                  "Sungai Pelek",
                                                  "Sungai Ramal",
                                                  "Sungai Tua",
                                                  "Taman Medan",
                                                  "Taman Templer",
                                                  "Tanjong Sepat",
                                                  "Teratai "
                                                    ], 
                                                  selected: @perse.dun), 
          {include_blank: "Pilih Satu"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- DATE OF BIRTH -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TARIKH LAHIR ANDA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12">
            <%= f.date_field :dob, class: "form-control", placeholder: "e.g. 0174151557 (no dash)", autofocus: true, required: true, value: @perse.dob %>
          </div>
        </div>
      </div>

      

      <%= f.hidden_field :id, value: params[:id] %>
      <%= f.hidden_field :proge, value: params[:proge] %>
      <%= f.hidden_field :perproge, value: params[:perproge] %>
      <%= f.hidden_field :prog, value: params[:prog] %>
      <%= f.hidden_field :regkid, value: params[:regkid] %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :Hantar,  class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
    
  </div>
</div>