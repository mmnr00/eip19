<% 
  if actn == "new"
    act= "create"
    btn = "CREATE"
  elsif actn == "edit"
    act= "update"
    btn= "UPDATE"
  end
  if @age <= 4
    dev = $newborn
  elsif @age <= 8
    dev = $empat
  elsif @age <= 12
    dev = $lapan
  elsif @age <= 24
    dev = $duabelas
  elsif @age <= 36
    dev = $duaempat
  elsif @age > 36
    dev = $tigaenam
  end
%>

<%= link_to edit_ekid_path(@ekid), class: "btn btn-sm btn-primary active" do%>
    <i class="fa fa-arrow-circle-left"></i> KEMBALI KE PROFIL ANAK
  <% end %>

<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(:pkid,:url => {:controller => "pkids", :action => "#{act}"}, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
        
        <h3> Maklumat Perkembangan Anak</h3>
        <%
          year = @age/12
          month = @age - year*12
        %>
        <h5>Umur Anak : <%= year %> Tahun, <%= month %> Bulan</h5>

        <%= f.fields_for :devkid do |h| %>
          <% dev.each do |ent| %>
            <div class="form-group"> <!-- name -->
              <div class="row">
                <div class="control-label col-sm-8">
                  <strong><%= ent %></strong>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-8 col-12">
                  <%= h.select :"#{ent}", options_for_select(["YA", 
                                                              "TIDAK"], 
                                                              selected: @pkid.devkid[ent]), 
                        {include_blank: "SILA PILIH"}, {required: true} %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <h3> Maklumat Tambahan </h3>

        <%= f.fields_for :addfo do |h| %>
          <% $addfo.each do |ent| %>
            <div class="form-group"> <!-- name -->
              <div class="row">
                <div class="control-label col-sm-8">
                  <strong><%= ent %></strong>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-8 col-12">
                  <%= h.text_field :"#{ent}", class: "form-control", value: @pkid.addfo[ent], autofocus: true %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-10 col-4">
              <%= f.submit :"HANTAR",  class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  

