<div class='row'>
  <div class='col-12'>
    <%= form_for(@ekrp, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
    <%
      if @ekrp.dt.present?
        dt = @ekrp.dt.to_date
      else
        dt = Date.today
      end
    %>
    

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TARIKH LAPORAN<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-12">
            <%= f.date_field :dt, class: "form-control", required: true, value: dt %>
          </div>
        </div>
      </div>

      <%= f.hidden_field :ekid_id, value: params[:ekid] %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :Hantar,  class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>