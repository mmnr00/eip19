
  <div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-search"></i>
    VIEWING BILLS FOR <strong><%= @kid.name %></strong>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th> N0 </th>
            <th> MONTH </th>
            <th> YEAR </th>
            <th> TASKA </th>
            <th> DESCRIPTION </th>
            <th> AMOUNT </th>
            <th> ACTION </th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th> N0 </th>
            <th> MONTH </th>
            <th> YEAR </th>
            <th> TASKA </th>
            <th> DESCRIPTION </th>
            <th> AMOUNT </th>
            <th> ACTION </th>
          </tr>
        </foot>
        <tbody>
          <% counter = 1 %>
          <% @kid_bills.each do |bill| %>
            <tr>
              <td><%= counter %></td>
              <td><%= bill.bill_month %></td>
              <td><%= bill.bill_year %></td>
              <td><%= bill.taska.name %></td>
              <td><%= bill.description %></td>
              <td><%= bill.amount %></td>
              <% if bill.paid %>
                <td>
                  <%= link_to "DOWNLOAD RECEIPT", bill_pdf_path(payment: bill.id, kid: @kid.id, taska: @kid.taska.id, format: :pdf), class: "btn btn-sm btn-success active", target: "_blank" %>
                </td>
              <% else %>
                <td>
                  <%= link_to "PAY BILL", view_invoice_path(id: bill), class: "btn btn-sm btn-danger active" %>
                </td>
              <% end %>
            </tr>
          <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </di

