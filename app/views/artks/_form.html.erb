

<div class='row'>
  <div class='col-lg-12 col-12'>
    <%= form_for(@artk, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TAJUK ARTIKEL<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_field :title, class: "form-control", placeholder: "", autofocus: true, required: true, style: "" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>URL GAMBAR<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_field :pic, class: "form-control", placeholder: "", autofocus: true, required: true, style: "" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>PENULIS<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_field :author, class: "form-control", placeholder: "", autofocus: true, required: true, style: "" %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>PERENGGAN UTAMA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_area :headl, class: "form-control", placeholder: "", autofocus: true, required: true, style: "", rows: 10 %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>PERENGGAN LAIN<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_area :bodl, class: "form-control", placeholder: "", autofocus: true, required: true, style: "", rows: 15 %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :Hantar,  class: 'btn btn-info btn-sm' %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>