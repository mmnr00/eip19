        <div class="col-lg-7" style="margin-bottom: 20px">
          <% id %>
          <div class="row" style="margin-bottom: 5px;">
            <div class="col-lg-4">
              <b>Nama:</b>
            </div>
            <div class="col-lg-8">
              <%= hash_vid["#{id}"][0]%>
            </div>
          </div>
          <div class="row" style="margin-bottom: 5px;">
            <div class="col-lg-4">
