<meta name="viewport" content="width=1024">
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    Senarai Permohonan Yang Dipadam Untuk <b>Pusat ANIS</b></b>
  </li>
</ol>

<%= link_to "Kembali Ke Paparan Admin #{params[:tp]}", ilscindex_path, class: "badge badge badge-primary", style: "font-size: 16px; font-weight: normal; margin-top: 5px" %><br>

<div class="table table-responsive border" style="font-size:13px">
      <table class="table table-bordered table-striped shadow" id="dataTable" width="100%" cellspacing="0" style="color: black">
        
        <thead>
          <tr class="shadow">
            <th style="background-color:#ffb2b2; width: ">MAKLUMAT PESERTA</th>
            <th style="background-color:#ffb2b2">MAKLUMAT PEMOHON</th>
            <th style="background-color:#ffb2b2">PROGRAM</th>
        </thead>
        <tbody>
          <% @ilscs.order('created_at DESC').each do |ek|; perse = ek.perse %>
          <tr>
            <td>
              <a href="<%= ilsc_conf_url(id: ek) %>" target="_blank"><%= ek.name %></a><br>
              
              <a href="<%= undodelilsc_url(id: ek) %>"><btn class="badge badge-pill badge-success" style="margin-top: 5px">Undo</btn></a><br>
              <a href="<%= delilsc_url(id: ek) %>"><btn class="badge badge-pill badge-danger" style="margin-top: 5px">Padam Selamanya</btn><br></a>
            </td>
            <td>
              <%= perse.name %><br>
              <%= perse.ph %><br>
              <%= perse.email %><br>
            </td>
            <td>
              <%= ek.tp %>
            </td>
            
            
          </tr>

          <% end %> <!-- END LOOP -->

        </tbody>
        
      </table>
    </div>