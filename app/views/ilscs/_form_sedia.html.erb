<meta name="viewport" content="width=1024">


<div class='row'>
  <div class='col-lg-12 col-12'>
    <%= form_for(@ilsc,:html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <!-- BAHAGIAN A -->
      <div class="col-sm-12" style="background-color:#ffcccc">
        <h4 style="color:black; font-weight: 600">Bahagian A</h4>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :name, class: "form-control", placeholder: "", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>


       <!-- BAHAGIAN C -->
      <div class="col-sm-12" style="background-color:#ffcccc">
        <h4 style="color:black; font-weight: 600">Bahagian D</h4>
      </div>

      <u><h6 style="color:black; font-weight: 300">Dokumen Yang Diperlukan</h6></u>

      
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <i class="fas fa-cloud-upload-alt"></i><strong>MYKAD BAPA</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <% image = @ilsc.fotos.where(foto_name: "MYKAD BAPA").first %>
            <%  if image.present? %>
              <%= image_tag(image.picture.url, size: "200x200") if image.picture? %>
              <div class="row">
                <div class="col-sm-8 col-5">
                  <strong><%= link_to "EDIT", edit_foto_path(image.id), class: "btn btn-sm btn-success active" %></strong>
                </div>
              </div>  
            <% else %>
              <%= f.fields_for :fotos do |h| %>
                <div class="row">
                  <div class="col-sm-8 col-8">
                    <%= h.hidden_field :foto_name, value: "MYKAD BAPA" %>
                    <%= h.file_field :picture, accept: 'image/jpeg,image/gif,image/png,application/pdf', required: true %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <i>Wajib Disertakan</i>
      </div>

      <div class="form-group"> 
        <div class="row">
