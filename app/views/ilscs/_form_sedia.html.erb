      <!-- OLD VERSION -->

      

      <%
        if @ilsc.perse.present?
          perse_id = @ilsc.perse.id
        else
          perse_id = params[:perse]
        end

        if @ilsc.tp.present?
          tp = @ilsc.tp
        else
          tp = params[:prog]
        end
      %>

      <%= f.hidden_field :tp, value: tp %>
      
      <%= f.hidden_field :perse_id, value: perse_id %>


      <br>
<!-- SUBMIT BUTTON -->
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :"TERUSKAN",  class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
      
    <% end %>

  </div>
