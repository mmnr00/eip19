<meta name="viewport" content="width=1024">


<div class='row'>
  <div class='col-lg-12 col-12'>
    <%= form_for(@ilsc,:html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      
    <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :name, class: "form-control", placeholder: "", autofocus: true, required: true, style: "text-transform: uppercase" %>
          </div>
        </div>
      </div>
      <b><u>MAKLUMAT PERSEKOLAHAN</u></b>

      <div class="table-responsive border" style="font-size: 12px">
        <table class="table table-bordered table-striped shadow" id="dataTable" width="100%" cellspacing="0">
          <thead style="text-align: center">
            <tr class="shadow">
              <th style="background-color:#7fbf7f;color:black">NAMA SEKOLAH RENDAH/MENENGAH/INSTITUSI LAIN</th>
              <th style="background-color:#7fbf7f;color:black">TAHUN MASUK</th>
              <th style="background-color:#7fbf7f;color:black">TAHUN KELUAR</th>
              <th style="background-color:#7fbf7f;color:black">PENCAPAIAN</th>
            </tr>
          </thead>
          <tbody style="color: black">
            <%= f.fields_for :schi do |h| %>
            <% (1..3).each do |n| %>
            <%= h.fields_for :"#{n}" do |g| %>
              <tr>
                <td>
                  <%= g.text_field :"sek", class: "form-control", placeholder: "", autofocus: true, style: "font-size: 12px" %>
                </td>
                <td>
                  <%= g.text_field :"tahun", class: "form-control", placeholder: "", autofocus: true, style: "font-size: 12px" %>
                </td>
                <td>
                  <%= g.text_field :"keluar", class: "form-control", placeholder: "", autofocus: true, style: "font-size: 12px" %>
                </td>
                <td>
                  <%= g.text_field :"pencapaian", class: "form-control", placeholder: "", autofocus: true, style: "font-size: 12px" %>
                </td>
              </tr>
            <% end %>
            <% end %>
            <% end %>
                   
          </tbody>

        </table>
      </div> <!-- DIV TABLE -->


      

      <%= f.hidden_field :tp, value: params[:prog] %>
      <%= f.hidden_field :perse_id, value: params[:perse] %>


      <br>
<!-- SUBMIT BUTTON -->
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :"TERUSKAN",  class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
      
    <% end %>

  </div>
</div>

<br><br><br><br><br>