
<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-search"></i>
      VIEWING ALL UNPAID BILLS
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th>PERIOD</th>
            <th>NAME</th>
            <th>AMOUNT(RM)</th>
            <th>DESCRIPTION</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% counter = 1 %>
          <% @kid_unpaid.each do |bill| %>
            <tr>
              <td><%= "#{$month_name[bill.bill_month]}" %>-<%= bill.bill_year %></td>
              <td><%= bill.kid.name %></td>
              <td><%= bill.amount %></td>
              <td><%= bill.description %></td>
              <td>
                <%= link_to "UNPAID", bill_view_path(payment: bill.id, kid: bill.kid.id, taska: bill.taska.id), class: "btn btn-sm btn-danger active"%>
                <%= link_to payment_path(id: bill.id, taska_id: bill.taska.id, kid_id: bill.kid.id, index: true), method: :delete, :data => {:confirm => 'Are you sure?'}, style: "color:red" do %>
                  <i class="fa fa-trash"></i> DELETE
                <% end %>
              </td>
            </tr>
             </tr>
            <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>