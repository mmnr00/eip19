
<div class="card mb-3">
    <div class="card-header">
    </div>
    <div class="bg-light"><br>
      <!-- Team -->
      <div class="container">
        <div class="row">
          <% @kid_unpaid.each do |bill| %>
            
            <!-- Team member -->
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="frontside">
                <div class="card">
                  <% @kid = bill.kids.first %>
                  <% if bill.paid %>
                    <%= link_to bill_pdf_path(payment: bill.id, kid: @kid.id, taska: @kid.taska.id, format: :pdf), class: "btn btn-sm btn-success active", target:"_blank" do %>
                      <i class="fa fa-download"></i> RECEIPT
                    <% end %>
                  <% else %>
                    <%= link_to bill_pdf_path(payment: bill.id, kid: @kid.id, taska: @kid.taska.id, format: :pdf), class: "btn btn-sm btn-danger active", target:"_blank" do %>
                      <i class="fa fa-exclamation"></i> UNPAID
                    <% end %>
                  <% end %>
                  <div class="card-body text-center">
                    
                    <p class="card-text">
                     <% bill.kids.each do |kid| %>
                      <a href="/kids/<%= kid.id %>" target="_blank">
                        <font color="blue">
                         <h5 class="card-title">
                          <strong><%= kid.name.upcase %></strong><br>
                         </h5>
                        </font>
                      </a>
                     <% end %>
                     <%= "#{$month_name[bill.bill_month].upcase}" %>-
                     <%= bill.bill_year %>
                    </p>

                  </div>
                  <%= link_to "RM #{bill.amount}", "#", class: "btn btn-lg btn-info active" %>
                  <% if !bill.paid %>
                    <% if !bill.reminder %>
                      <%= link_to sms_reminder_path(kid: @kid.id, bill: bill.id, account: true), class: "btn btn-sm active", style: "color:blue" do %>
                        <i class="fa fa-mobile"></i> SEND SMS REMINDER TO <%= "#{@kid.ph_1}-#{@kid.ph_2}"%>
                      <% end %>
                    <% else %>
                      <button class="btn btn-sm active">
                        <i class="fa fa-check-circle"></i> REMINDER SENT TO <%= "#{@kid.ph_1}-#{@kid.ph_2}"%>
                      </button>
                    <% end %>


                    <%= link_to payment_path(id: bill.id, taska_id: bill.taska.id, kid_id: @kid.id, index: true), method: :delete, :data => {:confirm => 'Are you sure?'}, class: "btn btn-sm active", style: "color:red" do %>
                      <i class="fa fa-trash"></i> DELETE
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="pull-left">
          <%= link_to unpaid_xls_path(@taska,unpaid: true, format: :xlsx), class: "btn btn-sm btn-warning active" do %>
            <i class="fa fa-file-excel"></i> ALL UNPAID BILLS
          <% end %>
          <%= link_to unpaid_xls_path(@taska,unpaid: false, format: :xlsx), class: "btn btn-sm btn-success active" do %>
            <i class="fa fa-file-excel"></i> ALL BILLS
          <% end %>
          <%= link_to :back, class: "btn btn-m btn-primary active" do %>
            <i class="fa fa-arrow-circle-left"></i> BACK
          <% end %>
        </div>
    </div>
  </div>
        