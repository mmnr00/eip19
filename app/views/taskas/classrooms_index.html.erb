<% if @unregistered_kids.present? %>

<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-search"></i>
      VIEWING PENDING REGISTRATIONS
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th>NO</th>
            <th>NAME</th>
            <th>AGE</th>
            <th style="font-size:15px">FATHER'S NAME</th>
            <th style="font-size:15px">FATHER'S PHONE</th>
            <th style="font-size:15px">MOTHER'S NAME</th>
            <th style="font-size:15px">MOTHER'S PHONE</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% counter = 1 %>
          <% @taska_classrooms.order('classroom_name ASC').each do |classroom| %>
            <tr>
              <td><%= counter %></td>
              <td><%= classroom.classroom_name %></td>
              <td><%= classroom.description %></td>
              <td><%= classroom.base_fee %></td>
              <td><strong><%= classroom.kids.count %></strong> children</td>
              <td>
                <%= link_to "VIEW", classroom_path(classroom), class: "btn btn-sm btn-primary active" %>&nbsp
                <%= link_to "EDIT", edit_classroom_path(classroom), class: "btn btn-sm btn-info active" %>&nbsp
                <% if classroom.kids.count < 1 %>
                  <%= link_to "DELETE", classroom_path(classroom), class: "btn btn-sm btn-danger active", method: :delete, :data => {:confirm => 'Are you sure?'} %>
                <% end %>
                  
                </td>
            </tr>
            <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% else %>

No pending registration.</br></br> 

<% end %>


<%= link_to "CREATE CLASSROOM", new_classroom_path(taska_id: @taska.id), class: "btn btn-xs btn-success active"%></br></br>

