<h4>CREATE NEW PAYSLIP FOR <%= @teacher.tchdetail.name.upcase %></h4>
<h3><%= "#{$month_name[params[:month].to_i]}-#{params[:year]}" %></h3>
<br>

<!-- IF FORM RESUBMISSION -->
<% if params[:upd] == "true" %>
  <% amt = params[:amt] %>
  <% alwnc = params[:alwnc] %>
  <% epf = params[:epf] %>
<% else %>
  <% amt = @payinfo.amt %>
  <% alwnc = @payinfo.alwnc %>
  <% epf = @payinfo.epf %>
<% end %>

<div class="row">
  <!-- FORM SUMMARY -->
  <div class="col-sm-8 bg-light">
    <div style="background-color:#ccccff"><h5 align="center">PAYSLIP SUMMARY</h5></div>
    <% calepf = (epf.to_f/100*amt.to_f) %>
    <%= total = amt.to_f + alwnc.to_f - calepf + params[:addtn].to_f %><br>
    BASE SALARY : <%= amt %><br>
    ALLOWANCE : <%= alwnc %><br>
    ADDITIONAL : <%= params[:addtn] %><br>
    EPF/SOCSO : (<%= calepf %>)<br>
    <%= form_for(:payslip, :url => {:controller=>'taskas', :action=>'chkpayslip'}, :html => {multipart: true, class: "form-horizontal", method: :get, role: "form"}) do |f| %>
      <br>
      <%= f.submit :"CREATE PAYSLIP", class: 'btn btn-success btn-sm' %>
    <% end %>
  </div>

  <!-- FORM ENTRY -->
  <div class="col-sm-4 bg-white">
    <div style="background-color:#cce5cc"><h5 align="center">PAYSLIP ENTRY</h5></div>
    <%= form_tag newpayslip_path, method: :get, id: "find_kid" do %>
      <div class="row">
        <div class="col-md-12">
          <strong>BASE SALARY (RM)</strong>
          <%= number_field_tag :amt, amt, 
                  placeholder: "", 
                  autofocus: true,  
                  step: 0.01,
                  class: "form-control search-box input-lg", style: "text-transform:uppercase" %>
        </div>
        <div class="col-md-12">
          <strong>ALLOWANCE (RM)</strong>
          <%= number_field_tag :alwnc, alwnc, 
                  placeholder: "", 
                  autofocus: true,  
                  step: 0.01,
                  class: "form-control search-box input-lg", style: "text-transform:uppercase" %>
        </div>
        <div class="col-md-12">
          <strong>EPF/SOCSO (%)</strong>
          <%= number_field_tag :epf, epf, 
                  placeholder: "", 
                  autofocus: true,  
                  step: 0.01,
                  class: "form-control search-box input-lg", style: "text-transform:uppercase" %>
        </div>
        <div class="col-md-12">
          <strong>ADDITIONAL (RM)</strong>
          <%= number_field_tag :addtn, params[:addtn], 
                  placeholder: "", 
                  autofocus: true,  
                  step: 0.01,
                  class: "form-control search-box input-lg", style: "text-transform:uppercase" %>
        </div>
        <div class="col-md-12">
          <strong>DESCRIPTION</strong>
          <%= text_area_tag :desc, params[:desc], 
                  placeholder: "", 
                  autofocus: true,
                  class: "form-control search-box input-lg", 
                  style: "text-transform:uppercase" %>
        </div>
      </div>
      
      <br>
      <%= hidden_field_tag :month, params[:month], value: params[:month] %>
      <%= hidden_field_tag :tch_id, params[:tch_id], value: params[:tch_id] %>
      <%= hidden_field_tag :year, params[:year], value: params[:year] %>
      <%= hidden_field_tag :upd, params[:upd], value: true %>
      <%= button_tag(type: :submit, class: "btn btn-sm btn-primary active", id: "submit_expense") do %>
        <i class="fa fa-check"></i> UPDATE
      <% end %>
    <% end %>

  </div>
</div>
