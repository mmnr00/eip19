<h1> Edit Details for <%= @kid.name %> for <%= @classroom.classroom_name %></h1>

<div class='row'>
		<div class='col-xs-12'>
			<%= form_for(@kid, :html => {class: "form-horizontal", role: "form"}) do |f| %>
				
				<div class="form-group"> <!-- name -->
					<div class="control-label col-sm-2">
						<%= f.label :name %>
					</div>
					<div class="col-sm-8">
						<%= f.text_field :name, class: "form-control", placeholder: "Children Name", autofocus: true %>
					</div>
				</div>

				<div class="form-group"> <!-- name -->
					<div class="control-label col-sm-2">
						<%= f.label :classroom %>
					</div>
					<div class="col-sm-8">
						<% options = options_from_collection_for_select(@classroom.taska.classrooms, 'id','classroom_name') %>
						<%= f.select :classroom_id, options, class: "form-control", :selected => @classroom.id%>
					</div>
				</div>

					
					
					
         			
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit class: 'btn btn-primary btn-lg' %>
					</div>
				</div>
			<% end %>
			
		</div>
	</div>