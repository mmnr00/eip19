<h1> Edit Details for <strong><%= @kid.name %></strong></h1>

<div class='row'>
	<div class='col-xs-12'>
		<%= form_for(@kid, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			
				<div class="form-group"> <!-- name -->
					<div class="control-label col-sm-2">
						<%= f.label :name %>
					</div>
					<div class="col-sm-8">
						<% if current_parent %>
							<%= f.text_field :name, class: "form-control", placeholder: "Children Name", autofocus: true %>
						<% else %>
							<%= f.text_field :name, class: "form-control", placeholder: "Children Name", autofocus: true, readonly: true %>
						<% end %>
					</div>
				</div>
			

			<% if current_admin %>
				<div class="form-group"> <!-- name -->
					<div class="control-label col-sm-2">
						<%= f.label :classroom %>
					</div>
					<div class="col-sm-8">
						<% options = options_from_collection_for_select(@classroom.taska.classrooms, 'id','classroom_name', @classroom.id) %>
						<%= f.select :classroom_id, options, class: "form-control"%>
					</div>
				</div>
			<% end %>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
		<% end %>
	</div>
</div>