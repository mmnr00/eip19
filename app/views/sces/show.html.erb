<div style="background-color:#b2b2ff"><h1 align="center">SUMMARY PAGE</h1></div>
<h2><%= @sce.name %></h2>
<h5><%= @sce.date.strftime('%d-%^b-%y') %></h5>
<h5><%= @sce.venue %></h5>

<%= render 'sces/schekid' %>

<h4>ATTENDANCE STATUS :  <%= "#{@ekids.where(stat: "CONF").count}/#{@ekids.count}" %></h4>
<%= link_to "EXTRACT DATA & REPORT", scexls_path(id: params[:id],format: :xlsx), class: "btn btn-sm btn-info" %>
<%= link_to "GO TO STATUS PAGE", showstat_path(id: @sce.id), class: "btn btn-sm btn-warning" %>
<%= link_to sce_path(id: @sce.id), class: "btn btn-sm btn-success" do %>
  <i class="fa fa-refresh"></i> UPDATE PROGRESS
<% end %>
  <br><br>
<div class="table-responsive">
  <table class="table table-striped table-bordered" width="100%" cellspacing="0">

    <thead>
      <tr>
        <th style="background-color:#99cc99">QUEUE NO</th>
        <th style="background-color:#99cc99">NAME</th>
        <th style="background-color:#99cc99">PARENTS INFO</th>
        <th style="background-color:#99cc99">PROGRESS</th>
        <th style="background-color:#99cc99">SCREENING REPORT</th>
        <th style="background-color:#99cc99">STATUS</th>
        <th style="background-color:#99cc99">REVERT</th>
      </tr>
    </thead>

    <tbody>
      <% @ekids.order('stat ASC').order('name ASC').each do |sc| %>
        <tr>
          <td><%= @turn[sc.id] %></td>
          <td>
            <%= "#{sc.name} (#{sc.ic})" %>&nbsp
            <%= link_to "PROFILE", ekidconf_path(id: sc.id), class: "btn btn-sm btn-info", target: "_blank" %>    
          </td>
          <td>
            <%= "#{sc.fname} (#{sc.fph})" %><br><br>
            <%= "#{sc.mname} (#{sc.mmph})" %>
          </td>
          <td>
            <%
                clo = "danger"
                clp = "danger" 
                cls = "danger" 
                cla = "danger"
                cld = "danger"
                if sc.ote.present?
                  if sc.ote.stat
                    clo = "success"
                  elsif !sc.ote.stat
                    clo = "warning"
                  end
                end
                if sc.pte.present?
                  if sc.pte.stat
                    clp = "success"
                  elsif !sc.pte.stat
                    clp = "warning"
                  end
                end
                if sc.ste.present?
                  if sc.ste.stat
                    cls = "success"
                  elsif !sc.ste.stat
                    cls = "warning"
                  end
                end
                if sc.ate.present?
                  if sc.ate.stat
                    cla = "success"
                  elsif !sc.ate.stat
                    cla = "warning"
                  end
                end
                if sc.skid.present?
                  if sc.skid.stat
                    cld = "success"
                  elsif !sc.skid.stat
                    cld = "warning"
                  end
                end
              %>
              <%= link_to "OT", "#", class: "btn btn-sm btn-#{clo} active" %><br><br>
              <%= link_to "PT", "#", class: "btn btn-sm btn-#{clp} active" %><br><br>
              <%= link_to "ST", "#", class: "btn btn-sm btn-#{cls} active" %><br><br>
              <%= link_to "AUDIO", "#", class: "btn btn-sm btn-#{cla} active" %><br><br>
              <%= link_to "DOCTOR", "#", class: "btn btn-sm btn-#{cld} active" %><br>
          </td>
          <td>
            <% if (sk=sc.skid).present? %>
              <%= link_to skid_path(id: sk.id, format: :pdf), class: "btn btn-sm btn-primary" do %>
                <i class="fa fa-print"></i> PRINT 
              <% end %>
              <br><br>
              <% if sc.chkl.present? %>
                <%= link_to schkl_path(id: sc.chkl.id, format: :pdf), class: "btn btn-sm btn-warning" do %>
                  <i class="fa fa-print"></i> CHECKLIST
                <% end %>
              <% end %>
            <% else %>
              PENDING
            <% end %>
          </td>

          <td>
            <% if sc.stat == "ATT" %>
              <%= link_to "CHECK-IN", confsce_path(id: @sce.id, ekid: sc.id), class:"btn btn-sm btn-primary" %>
            <% elsif sc.stat == "CONF" %>
              <%= link_to "CONFIRMED", "#", class:"btn btn-sm btn-success" %>
            <% end %>
          </td>

          <td>
            <%= link_to "REMOVE", rmvsce_path(id: @sce.id, ekid: sc.id), data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>

