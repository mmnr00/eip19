<%= form_for(@sce, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group"> <!-- name -->
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>NAME</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_field :name, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> <!-- DATE -->
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>DATE</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.date_field :date, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> <!-- VENUE -->
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>VENUE</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_field :venue, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <%= f.hidden_field :loc, value: "sha" %>

  <!-- SUBMIT BUTTON -->
  <div class="form-group">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10 col-4">
        <%= f.submit :"UPDATE",  class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>