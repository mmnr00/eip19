<div class="col-sm-12 bg-white">
  <%= form_tag findekid_path, remote: true, method: :get, id: "find_kid" do %>
    <div class="form-group text-center col-md-12">
      <strong>SEARCH SERIAL NO </strong><br><br>
      <div class="row">
        <div class="col-3"></div>
        <div class="col-5">
          <%= text_field_tag :ic, params[:ic], 
                  placeholder: "e.g 5532_PPAS",
                  autofocus: true, 
                  class: "form-control search-box input-lg", 
                  style: "text-transform:uppercase",
                  required: true %>
          <%= hidden_field_tag :proge, params[:proge], value: params[:proge] %>
          <%= hidden_field_tag :typ, params[:typ], value: params[:typ] %>
          <%= hidden_field_tag :adm, params[:adm], value: @admin.id %>
        </div>
        <div class="col-1">
          <%= button_tag(type: :submit, class: "btn btn-sm btn-info", id: "submit_expense") do %>
              <i class="fa fa-search"></i> FIND 
          <% end %>
        </div>
        <br><br><br>
        <div class="col-3"></div>
      </div>
      <div id="result_kid">
        <%= render 'ekids/result' %> 
      </div>
    </div>
  <%end%>
</div>


<div class="scontainer">
  <div class="row">

    <div class="col-md-3">
      <div class="card-counter primary">
        <i class="fa fa-code-fork"></i>
        <span class="count-numbers">432</span>
        <span class="count-name">
          <a href="/ekidindex?stato=NEW", style="color:#fff">New</a>
        </span>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card-counter danger">
        <i class="fa fa-exclamation-circle"></i>
        <span class="count-numbers">210</span>
        <span class="count-name">
          <a href="/ekidindex?stato=REJECT", style="color:#fff">Rejected</a>
        </span>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card-counter info">
        <i class="fa fa-globe"></i>
        <span class="count-numbers">400</span>
        <span class="count-name">
          <a href="/ekidindex?stato=MENTOR", style="color:#fff">Assigned</a>
        </span>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card-counter success">
        <i class="fa fa-globe"></i>
        <span class="count-numbers">271</span>
        <span class="count-name">
          <a href="/ekidindex?stato=MENTOR", style="color:#fff">In Progress</a>
        </span>
      </div>
    </div>


    
  </div>
</div>









