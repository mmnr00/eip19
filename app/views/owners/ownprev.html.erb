<h1>MY RECORDS</h1>
<%= @ekids.count %>

<div class="table-responsive">
  <table class="table table-striped table-bordered" width="100%" cellspacing="0">

    <thead>
      <tr>
        <th style="background-color:#d8b2d8">ID</th>
        <th style="background-color:#d8b2d8">NAME</th>
        <th style="background-color:#d8b2d8">SESSION</th>
        <th style="background-color:#d8b2d8">SCREENING REPORT</th>
        <!-- <th style="background-color:#d8b2d8">REFER LETTER</th> -->
      </tr>
    </thead>

    <tbody>
      <% @ekids.order('sce_id DESC').order('name ASC').each do |ek| %>
        <tr>
          <td><%= ek.id %></td>
          <td><%= link_to "#{ek.name} (#{ek.ic})", ekidconf_path(id: ek.id), class: "btn btn-sm btn-info", target: "_blank" %></td>
          <td>
            <%= ek.sce.name %><br>
            <%= ek.sce.date.strftime('%d-%^b-%y')%>   
          </td>
          <td>
            <% if ek.skid.present? %>
              <%= link_to "EDIT", edit_skid_path(id: ek.skid.id, ekid: ek.id, rcd: true), class: "btn btn-sm btn-primary" %>
            <% else %>
              <%= link_to "CREATE", new_skid_path(ekid: ek.id, rcd: true), class: "btn btn-sm btn-warning" %>
            <% end %>
          </td>
          <!-- <td>
            <% if ek.rflt.present? %>
              <%= link_to "EDIT", edit_rflt_path(id: ek.rflt.id, ekid: ek.rflt.ekid.id, rflt: 1), class: "btn btn-sm btn-primary" %>
            <% end %>
          </td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
