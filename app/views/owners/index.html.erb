<%= link_to "Create New Agency", new_college_path(id: @owner.id), class: "btn btn-sm btn-success active" %></br></br>

<% if @owner.colleges.present? %>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-list-alt"></i>
      MY COLLEGES
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th> Name </th>
              <th> Address </th>
              <th> Action </th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th> Name </th>
              <th> Address </th>
              <th> Action </th>
            </tr>
          </foot>
          <tbody>
            <% @owner.colleges.each do |college| %>
            <tr>
              <td><%= college.name %></td>
              <td><%= college.address %></td>
              <td>
                <%= link_to "View Agency", show_owner_path(@owner, college: college), class: "btn btn-sm btn-primary active" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>		
<% else %>
	No Colleges to display
<% end %>
