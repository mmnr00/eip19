<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@classroom, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

        <!-- classroom name -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>CLASSROOM NAME</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :classroom_name, class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <!-- classroom description -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>CLASSROOM DESCRIPTION</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_area :description, class: "form-control", autofocus: true, required: true %>
              e.g Age Range, Classroom Activities etc
            </div>
          </div>
        </div>

        <!-- BASE FEE-->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>CLASSROOM BASE FEE(RM)</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.number_field :base_fee, class: "form-control", autofocus: true, required: true %>
              Fee to be used for all children in the classroom
            </div>
          </div>
        </div>

        <%= f.hidden_field :taska_id, value: @taska.id %>
              
        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-10 col-4">
              <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>