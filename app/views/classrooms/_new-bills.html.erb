<% if kid.payments.where.not(name: "TASKA BOOKING").where(bill_month: Date.today.month).where(bill_year: Date.today.year).present? %>
  <a class="btn icon-btn btn-brown pull-right active" >
    <font color="indigo">
      <span class="fa fa-check-circle"></span> 
        BILL EXIST FOR <%= "#{$month_name[Date.today.month].upcase}-#{Date.today.year}" %>
    </font>
  </a>
<% else %>
  <a class="btn icon-btn btn-brown pull-right active" href="/taska/<%= @classroom.taska.id %>/new_bill?child=<%= kid.id %>&classroom=<%= @classroom.id %>&month=<%= Date.today.month %>&year=<%= Date.today.year %>">
    <font color="blue">
      <span class="fa fa-plus"></span> 
        NEW BILL FOR <%= "#{$month_name[Date.today.month].upcase}-#{Date.today.year}" %>
    </font>
  </a>
<% end %>
<% next_bill = Date.today + 1.month %>
<% if kid.payments.where.not(name: "TASKA BOOKING").where(bill_month: next_bill.month).where(bill_year: next_bill.year).present? %>
  <a class="btn icon-btn btn-brown pull-right active" >
    <font color="indigo">
      <span class="fa fa-check-circle"></span> 
        BILL EXIST FOR <%= "#{$month_name[next_bill.month].upcase}-#{next_bill.year}" %>
    </font>
  </a>
<% else %>
  <a class="btn icon-btn btn-primary pull-right active" href="/taska/<%= @classroom.taska.id %>/new_bill?child=<%= kid.id %>&classroom=<%= @classroom.id %>&month=<%= next_bill.month %>&year=<%= next_bill.year %>">
    <span class="fa fa-plus"></span> 
      NEW BILL FOR <%= "#{$month_name[next_bill.month].upcase}-#{next_bill.year}" %>
  </a>
<% end %>