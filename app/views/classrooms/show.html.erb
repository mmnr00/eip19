<% if @classroom_kids.count > 0 %>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-search"></i>
      CHILDREN'S LIST FOR <strong><%= @classroom.classroom_name.upcase %></strong>
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th>NO</th>
            <th>NAME</th>
            <th>MYKID NO</th>
            <th>PROFILE</th>
            <th>BILLS</th>
          </tr>
        </thead>
        <tbody>
          <% counter = 1 %>
          <% @classroom_kids.each do |kid| %>
            <tr>
              <td><%= counter %></td>
              <td><%= kid.name %></td>
              <td><%= kid.ic_1 %>-<%= kid.ic_2 %>-<%= kid.ic_3 %></td>
              <td> 
                <%= link_to "VIEW", kid_path(kid), class: "btn btn-sm btn-primary active" %>&nbsp
                <%= link_to "REMOVE", remove_classroom_path(kid: kid, classroom: @classroom), class: "btn btn-sm btn-danger active", :data => {:confirm => 'Are you sure?'} %>&nbsp
              </td>
              <td> 
                <%= link_to "NEW BILL", "#", class: "btn btn-sm btn-info active" %>&nbsp
                <%= link_to "VIEW BILLS", "#", class: "btn btn-sm btn-success active" %>&nbsp
              </td>
            </tr>
            <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<% else %>
  No children registered in <%= @classroom.classroom_name.upcase %>
<% end %>