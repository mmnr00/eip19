<h1> <%= @classroom.classroom_name %>'s Page </h1>

<div class="results-block col-md-12">
	<caption><h3>TEACHER'S LIST</h3></caption>
  <table class="table table-striped table-bordered">
  <%= link_to "ADD TEACHER", list_teacher_classroom_path(@classroom), class: "btn btn-xs btn-danger active" %>
    <thead>   	
      <tr>
        <th>NAME</th>
        <th>EMAIL</th>
        <th>Actions</th>

      </tr>
    </thead>

    <tbody>
    	<% @classroom.teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.username %></td>
          <td><%= teacher.email %></td>
          <td><%= link_to "View profile", teacher_path(teacher: teacher), class: "btn btn-xs btn-success active" %> | <%= link_to "Remove from #{@classroom.classroom_name}", delete_teacher_classroom_path(teacher: teacher), class: "btn btn-xs btn-danger active", method: :delete, data: { confirm: "Are you sure to remove #{teacher.username}?" } %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>


<div class="results-block col-md-12">
  <caption><h3>CHILDREN'S LIST</h3></caption>
  <table class="table table-striped table-bordered">
  	<%= link_to "ADD CHILDREN", search_kid_path(@classroom), class: "btn btn-xs btn-primary active" %>
    <thead>
      <tr>
        <th>NAME</th>
        <th>PARENT</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @classroom_kids.each do |kid| %>
        <tr>
          <td><%= kid.name %></td>
          <td><%= kid.parent.username %></td>
          <td><button type="button" class="btn btn-xs btn-primary active">ADD BILL</button> | <%= link_to "EDIT DETAILS", edit_kid_path(kid, classroom: @classroom), class: "btn btn-xs btn-success active" %> | <%= link_to "REMOVE FROM TASKA", remove_classroom_path(kid: kid, classroom: @classroom), class: "btn btn-xs btn-danger active", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="results-block col-md-12">
	<%= link_to "Back to Classroom Listing", classroom_index_path(@classroom.taska_id), class: "btn btn-xs btn-primary active" %>
  <%= link_to "Back to Admin View", taska_path(@classroom.taska_id), class: "btn btn-xs btn-primary active" %>
</div>
