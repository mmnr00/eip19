<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@ptnsmmb, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group"> <!-- name -->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>FULL NAME</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :name, class: "form-control", placeholder: "YOUR FULL NAME AS PER IC", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <!-- DOB -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>DATE OF BIRTH</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.date_field :dob, class: "form-control", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <!-- IC -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>IC NO</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3 col-4">
            <%= f.text_field :ic1, maxlength: 6 ,class: "form-control", autofocus: true, required: true %>
          </div> <strong>-</strong>
          <div class="col-sm-2 col-3">
           <%= f.text_field :ic2, maxlength: 2, class: "form-control", placeholder: "", autofocus: true, required: true %>
          </div> <strong>-</strong>
          <div class="col-sm-3 col-4">
            <%= f.text_field :ic3, maxlength: 4, class: "form-control", placeholder: "", autofocus: true, required: true %>
          </div>         
        </div>
      </div>

      <!-- MAIN PHONE -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>CONTACT NUMBER</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2 col-3">
           <%= f.text_field :ph1, maxlength: 3, class: "form-control", placeholder: "", autofocus: true, required: true %>
          </div> <strong>-</strong>
          <div class="col-sm-3 col-4">
            <%= f.text_field :ph2, maxlength: 8, class: "form-control", placeholder: "", autofocus: true, required: true %>
          </div>      
        </div>
      </div>

      <!-- HIGHEST EDUCATION-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>EDUCATION LEVEL</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-8">
            <%= f.select :edu, options_for_select(["PHD", 
                                                      "Master", 
                                                      "Degree",
                                                      "Diploma/STPM",
                                                      "SPM/SPMV/MCE/O-Level",
                                                      "Sijil Kemahiran",
                                                      "Others"
                                                      ], 
                                                      selected: @ptnsmmb.edu), 
            {include_blank: "Please Select"}, {required: true} %>
          </div>
        </div>
      </div>

      <!-- MEMBERSHIP TYPE-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>MEMBERSHIP TYPE (x complete)</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-8">
            <%= f.select :mmb, options_for_select(["PHD", 
                                                      "Master", 
                                                      "Degree",
                                                      "Diploma/STPM",
                                                      "SPM/SPMV/MCE/O-Level",
                                                      "Sijil Kemahiran",
                                                      "Others"
                                                      ], 
                                                      selected: @ptnsmmb.mmb), 
            {include_blank: "Please Select"}, {required: true} %>
          </div>
        </div>
      </div>

      <!-- ADDRESS-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>HOME ADDRESS</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
           <%= f.text_field :add1, class: "form-control", autofocus: true, required: true %> <font size="2"> Address Line 1 </font>
          </div>
          <div class="col-sm-8 col-12">
           <%= f.text_field :add2, class: "form-control", autofocus: true %> <font size="2"> Address Line 2 </font>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3 col-6">
           <%= f.text_field :city, class: "form-control", autofocus: true, required: true %> <font size="2"> City </font>
          </div>
          <div class="col-sm-3 col-5">
           <%= f.text_field :state, class: "form-control", autofocus: true, required: true %> <font size="2"> States </font>
          </div>
          <div class="col-sm-2 col-4">
           <%= f.number_field :postcode, class: "form-control", autofocus: true, required: true %> <font size="2"> Postcode </font>
          </div>
        </div>
      </div>

      <br><br>ONLY FILL IN IF YOU WANT TO REGISTER AS AN ORGANIZATION<br><br>

      <!-- TASKA DETAILS -->
      <!-- taska name -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TASKA NAME</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :ts_name, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>

      <!-- taska owner name -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>CONTACT PERSON IN TASKA</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :ts_owner, class: "form-control", autofocus: true %>
          </div>
        </div>
      Leave BLANK if you are the owner
      </div>

      <!-- Taska PHONE-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TASKA PHONE NUMBER</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2 col-3">
           <%= f.text_field  :ts_ph1, maxlength: 3, class: "form-control", autofocus: true %><font size="2"> Area </font> 
          </div>
          -
          <div class="col-sm-3 col-5">
            <%= f.text_field  :ts_ph2, maxlength: 8, class: "form-control", autofocus: true %><font size="2"> Phone Number </font> 
          </div>
        </div>
      </div>

      <!-- TASKA ADDRESS-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TASKA ADDRESS</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
           <%= f.text_field :ts_add1, class: "form-control", autofocus: true %> <font size="2"> Address Line 1 </font>
          </div>
          <div class="col-sm-8 col-12">
           <%= f.text_field :ts_add2, class: "form-control", autofocus: true %> <font size="2"> Address Line 2 </font>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3 col-6">
           <%= f.text_field :ts_city, class: "form-control", autofocus: true %> <font size="2"> City </font>
          </div>
          <div class="col-sm-3 col-5">
           <%= f.text_field :ts_state, class: "form-control", autofocus: true %> <font size="2"> States </font>
          </div>
          <div class="col-sm-2 col-4">
           <%= f.number_field :ts_postcode, class: "form-control", autofocus: true %> <font size="2"> Postcode </font>
          </div>
        </div>
      </div>

      <!-- TASKA STATUS-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TASKA STATUS (x complete)</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-8">
            <%= f.select :ts_status, options_for_select(["PHD", 
                                                      "Master", 
                                                      "Degree",
                                                      "Diploma/STPM",
                                                      "SPM/SPMV/MCE/O-Level",
                                                      "Sijil Kemahiran",
                                                      "Others"
                                                      ], 
                                                      selected: @ptnsmmb.ts_status), 
            {include_blank: "Please Select"}, {required: true} %>
          </div>
        </div>
      </div>

      <!-- YOUR ROLE-->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>YOUR JOB IN TASKA (x complete)</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-8">
            <%= f.select :ts_job, options_for_select(["PHD", 
                                                      "Master", 
                                                      "Degree",
                                                      "Diploma/STPM",
                                                      "SPM/SPMV/MCE/O-Level",
                                                      "Sijil Kemahiran",
                                                      "Others"
                                                      ], 
                                                      selected: @ptnsmmb.ts_job), 
            {include_blank: "Please Select"}, {required: true} %>
          </div>
        </div>
      </div>




      <!-- SUBMIT BUTTON -->
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :"SUBMIT",  class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
    <% end %>
      
  </div>
</div>

