<%= form_for(@qsa, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <% 
    if @qsa.ques.blank?
      qs = params[:ek][:ques]
    else
      qs = @qsa.ques
    end
  %>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Soalan Anda<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.text_area :ques, class: "form-control", required: true, value: qs, style: "text-transform: uppercase", rows: 5%>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Kategori<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-12">
        <datalist id='colors'>
          <% @qscatg.each do |qs| %>
            <option><%= qs %></option>
          <% end %>
        </datalist>

        <input class='form-control' list='colors' id='car_color_name' name='qsa[catg]' value='<%= @qsa.catg %>' style="text-transform: uppercase;" required="required">
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Nama Anda<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Email Anda<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>No Telefon</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.number_field :ph, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-10 col-12">
        <%= f.submit :Hantar,  class: 'btn btn-success btn-sm btn-block' %>
      </div>
    </div>
  </div>

<% end %>

