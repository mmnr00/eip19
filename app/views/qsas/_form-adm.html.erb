<%= form_for(@qsa, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Soalan Yang Dikemukan<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.text_area :ques, class: "form-control", required: true, style: "text-transform: uppercase", rows: 5%>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Jawapan Pakar<a style="color: red">*</a></strong>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= f.text_area :ans, class: "form-control", required: true, style: "", rows: 5%>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>Kategori<a style="color: red">*</a></strong>
      </div>
    </div>
    <!-- <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-12">
        <datalist id='colors'>
          <% @qscatg.each do |qs| %>
            <option><%= qs %></option>
          <% end %>
        </datalist>

        <input class='form-control' list='colors' id='car_color_name' name='qsa[catg]' value='<%= @qsa.catg %>' style="text-transform: uppercase;" required="required">
      </div>
    </div> -->
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :catg, options_for_select(["MAKLUMAT AM", 
                                              "PSIKOLOGI",
                                              "TERAPI CARA KERJA",
                                              "FISIOTERAPI",
                                              "TERAPI PERTUTURAN",
                                              "DIETETIK & PEMAKANAN"], 
                                              selected: @qsa.catg), 
        {include_blank: "SILA PILIH"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-10 col-12">
        <%= f.submit :Hantar,  class: 'btn btn-success btn-sm btn-block' %>
      </div>
    </div>
  </div>

<% end %>

