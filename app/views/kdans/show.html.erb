

<meta name="viewport" content="width=1024">

<% link_to "Cetak/Muat Turun", root_path, class: "badge badge-pill badge-info", style: "font-size: 12px; margin-top: 10px", :onclick => 'window.print();return false;' %>
<% link_to "try", root_path, class: "badge badge-pill badge-info", style: "font-size: 12px; margin-top: 10px", :onclick => 'console.log("MUS");return false' %>


<h3 style="color:black;font-weight: 1000;text-align: center">MAKLUMAT PEMOHON (<%= @kdan.tp %>)</h3>
    
      <% 
        
        img1 = image_path('anislogo1.png') 
        img1 = "#{root_url}#{img1}"
      %>
      <h5 style="color:black;font-weight: 100;text-align: center;margin-top: -10px;">
      
      
      KAD ANIS
      <button class="badge badge-pill badge-primary"><%= @kdan.stat %></button>

    </h5>

<div class="prt-hide" style="margin-bottom: 10px;">
  <%= link_to "Kemaskini Borang", edit_kdan_path(id: @kdan, perse: @kdan.perse.id), class: "badge badge-pill badge-secondary" unless current_admin.present? %> 
  <%= link_to "Muat Turun Borang", "#", onclick: 'window.print()', class: 'btn btn-sm btn-success btn-block' %>
  <% if current_admin.present? && params[:adm].present? %>
    <div class="col-4">
    <div style="background-color: #ff944c; text-align: center; margin-bottom: 10px;margin-top: 10px; border-radius: 40px">
        <h6 style="text-align: center; font-weight: 500; color: white">Kemaskini Status</h6>
    </div>
    <%= form_for(:kdan, :url => {:controller=>'kdans', :action=>'updkdan'}, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group"> <!-- STATUS-->
        <div class="row">
          <div class="control-label col-8">
            <strong>STATUS PERMOHONAN</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.select :stat, options_for_select(["Permohonan Dalam Semakan","Permohonan Tidak Lengkap", "Permohonan Lulus", "Permohonan Ditolak"], selected: @kdan.stat) ,{include_blank: "Sila Pilih"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- STATUS-->
        <div class="row">
          <div class="control-label col-12">
            <strong>MAKLUMAT ADMIN</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.text_area :admcmt, class: "form-control", placeholder: "", autofocus: true, required: true, style: "" %>
          </div>
        </div>
      </div>

      

      <%= f.hidden_field :kdan, value: @kdan.id %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10 col-4">
            <%= f.submit :Hantar,  class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>

   
    

    <% end %>


  </div>
  <% else %>
    <b>Catatan Admin:</b> <%= @kdan.admcmt %> 
  <% end %>
</div>

