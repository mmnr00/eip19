<meta name="viewport" content="width=1024">
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    Paparan Admin <b>KAD ANIS</b></b>
  </li>&nbsp&nbsp
  <%= link_to kdanxls_path(format: :xlsx, sch_stat: params[:sch_stat], yr: params[:yr]), class: "badge badge-primary shadow-sm", style: "font-size: 14px; font-weight: normal" do %>
        <i class="fa fa-sync"></i> Muat Turun Data
    <% end %>
</ol>

<div class="row">
  
  <div class="col-3">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">DALAM SEMAKAN</div>
            <a href="<%= lsddk_url(sch: true, stat: 1) %>"><div class="h5 mb-0 font-weight-bold text-gray-800"><%= @kdans.where(stat: "Permohonan Dalam Semakan").count %></div></a>
          </div>
          <div class="col-auto">
            <i class="fas fa-folder-plus fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-3">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">TIDAK LENGKAP</div>
            <a href="<%= lsddk_url(sch: true, stat: 2) %>"><div class="h5 mb-0 font-weight-bold text-gray-800"><%= @kdans.where(stat: "Permohonan Tidak Lengkap").count %></div></a>
          </div>
          <div class="col-auto">
            <i class="fa fa-spinner fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-3">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">LULUS</div>
            <a href="<%= lsddk_url(sch: true, stat: 3) %>"><div class="h5 mb-0 font-weight-bold text-gray-800"><%= @kdans.where(stat: "Permohonan Lulus").count  %></div></a>
          </div>
          <div class="col-auto">
            <i class="fa fa-thumbs-up fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-3">
    <div class="card border-left-danger shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">DITOLAK</div>
            <a href="<%= lsddk_url(sch: true, stat: 4) %>"><div class="h5 mb-0 font-weight-bold text-gray-800"><%= @kdans.where(stat: "Permohonan Ditolak").count  %></div></a>
          </div>
          <div class="col-auto">
            <i class="fa fa-exclamation-circle fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>


<div class="cards shadow mb-4">
  <div class="card-header">
    <div class="row">
      <%= form_tag kdan_index_path, method: :get, id: "find_kid" do %>
        <%= text_field_tag :sch_str, params[:sch_str], placeholder: "Nama atau No K/P", style: 'text-transform: uppercase' %>
        <%= select_tag :sch_stat, options_for_select(["Permohonan Dalam Semakan","Permohonan Tidak Lengkap", "Permohonan Lulus", "Permohonan Ditolak"], params[:sch_stat]),
              include_blank: "Semua Status" %>
        <%= select_tag :yr, options_for_select((2021..Date.today.year).to_a, params[:yr]),
              include_blank: "Semua Tahun" %>
        <%= hidden_field_tag :sch, params[:sch], value: true %>
        <%= button_tag(type: :submit, class: "badge badge-success shadow-none", style: "font-size: 14px; border-style: none; font-weight: normal",  id: "submit_expense") do %>
            <i class="fa fa-search"></i> Cari
        <% end %>
        <%= link_to kdan_index_path, class: "badge badge-danger shadow-sm", style: "font-size: 14px; font-weight: normal" do %>
            <i class="fa fa-sync"></i> Semula
        <% end %>
        <%= "#{@kdans.count} carian" %><br>
        <% link_to ekidindex_path(sch_str: params[:sch_str], sch_fld: params[:sch_fld], phs: params[:phs],yr: params[:yr], showl: true, sch: params[:sch]), class: "badge badge-primary shadow-sm", style: "font-size: 14px; font-weight: normal" do %>
            <i class="fa fa-sync"></i> Lihat Senarai
        <% end %>
      <% end %>
    </div>

        
      </div>
    </div>
  </div>

  <div class="card-body">

    
    <div class="table table-responsive border" style="font-size:13px">
      <table class="table table-bordered table-striped shadow" id="dataTable" width="100%" cellspacing="0" style="color: black">
        
        <thead>
          <tr class="shadow">
            <th style="background-color:#ffb2b2; width:">NO</th>
            <th style="background-color:#ffb2b2">MAKLUMAT PEMOHON</th>
            <th style="background-color:#ffb2b2">MAKLUMAT IBU BAPA/PENJAGA</th>
            <th style="background-color:#ffb2b2; width: 18%">STATUS</th>
            <th style="background-color:#ffb2b2; width: 20%">TARIKH PERMOHONAN</th>
          </tr>
        </thead>
        <tbody>
          <% cnt = 0 ; @kdans.order('created_at ASC').each do |ek|; perse = ek.perse; cnt = cnt + 1 %>
            <tr>
              <td><%= cnt %></td>
              <td>
                <a href="<%= kdan_url(id: ek, prt: 1, adm: true)%>"><%= "#{ek.name}" %></a><br>
                <%= "(#{ek.ic})" %>
              </td>
              <td>
                <%= ek.prtname %><br>
                <%= ek.prtrel %><br>
                <%= ek.prtemail %><br>
                <%= ek.prtfon %>
              </td>
              <td>
                <%= ek.stat %><br>
                <b>Catatan Admin: </b><%= ek.admcmt %>
                <% if ek.stat == "Permohonan Lulus" %>
                  <%= link_to "E-Card", ecardanis_path(id: ek.id), class: "badge badge-pill badge-warning", style: "font-size: 10px", target: "_blank" %><br>
                <% end %>
              </td>
              <td><%= ek.created_at.strftime('%d-%^b-%Y') %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>









