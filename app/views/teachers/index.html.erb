<%
  tp=@teacher.tp
  if tp == "st"
    actn = "SPEECH THERAPY ASSESSMENT"
  elsif tp == "ot"
    actn = "OCCUPATIONAL THERAPY ASSESSMENT"
  else
    actn = "MUS"
  end
%>

<h2><%= @sce.name %></h2>
<h5><%= @sce.date.strftime('%d-%^b-%y') %></h5>
<h5><%= @sce.venue %></h5>

<h5>NO OF CHILDRENS :  <%= @ekids.count %></h5>
<div class="table-responsive">
  <table class="table table-striped table-bordered" width="100%" cellspacing="0">

    <thead>
      <tr>
        <th style="background-color:#99cc99">ID</th>
        <th style="background-color:#99cc99">NAME</th>
        <th style="background-color:#99cc99">PARENTS INFO</th>
        <th style="background-color:#99cc99"><%= actn %></th>
      </tr>
    </thead>

    <tbody>
      <% @ekids.order('name ASC').each do |sc| %>
        <%
          tp=@teacher.tp
          if tp == "st"
            gtf = sc.ste.present?
          elsif tp == "ot"
            gtf = sc.ote.present?
          else
            actn = "MUS"
          end
        %>
        <tr>
          <td><%= sc.id %></td>
          <td><%= "#{sc.name} (#{sc.ic})" %>
            <br><%= link_to "PROFILE", ekidconf_path(id: sc.id), class: "btn btn-sm btn-info", target: "_blank" %></td>
          <td>
            <%= "#{sc.fname} (#{sc.fph})" %><br><br>
            <%= "#{sc.mname} (#{sc.mmph})" %>
          </td>
          <td>
            <% if gtf %>
              <%= link_to "EDIT", ekass_path(id: sc.id, tp: tp), class: "btn btn-sm btn-success" %>
            <% else %>
              <%= link_to "CREATE", new_ste_path(id: sc.id, tp: tp), class: "btn btn-sm btn-warning" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>