<%
  tp=@teacher.tp
  if tp == "st"
    actn = "SPEECH THERAPIST ASSESSMENT"
  elsif tp == "ot"
    actn = "OCCUPATIONAL THERAPIST ASSESSMENT"
  elsif tp == "pt"
    actn = "PHYSIO THERAPIST ASSESSMENT"
  elsif tp == "at"
    actn = "AUDIOLOGIST ASSESSMENT"
  else
    actn = "MUS"
  end
%>

<div style="background-color:blue"><h1 align="center" style="color:white"><%= actn %></h1></div>

<h4>RECORDS COUNT (<%= @ekids.count %>)</h4>

<div class="table-responsive">
    <table class="table table-striped table-bordered" width="100%" cellspacing="0">

      <thead>
        <tr>
          <th style="background-color:#99cc99">ID</th>
          <th style="background-color:#99cc99">NAME</th>
          <th style="background-color:#99cc99">SESSION</th>
          <th style="background-color:#99cc99">RECORDS</th>
        </tr>
      </thead>

      <tbody>
        <% @ekids.order('sce_id DESC').order('name ASC').each do |sc| %>
          <%
            tp=@teacher.tp
            if tp == "st"
              gtf = sc.ste.present?
            elsif tp == "ot"
              gtf = sc.ote.present?
            elsif tp == "pt"
              gtf = sc.pte.present?
            elsif tp == "at"
              gtf = sc.ate.present?
            else
              actn = "MUS"
            end
          %>
          <tr>
            <td><%= sc.id %></td>
            <td><%= "#{sc.name.upcase} (#{sc.ic})" %>
              <br><%= link_to "PROFILE", ekidconf_path(id: sc.id), class: "btn btn-sm btn-info", target: "_blank" %></td>
            <td>
              <%= sc.sce.name %><br>
              <%= sc.sce.date.strftime('%d-%b-%y')%>
            </td>
            <td>
              <% if gtf %>
                <%= link_to "EDIT", ekass_path(id: sc.id, tp: tp), class: "btn btn-sm btn-success" %>
              <% else %>
                <%= link_to "CREATE", new_ste_path(id: sc.id, tp: tp), class: "btn btn-sm btn-warning" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>