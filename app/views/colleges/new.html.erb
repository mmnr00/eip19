<h1> New college for <%= @owner.username %> </h1>

<div class='row'>
	<div class='col-sm-12'>
		<%= form_for(@college, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			
			<div class="form-group"> <!-- name -->
				<div class="control-label col-sm-2">
					<%= f.label :name %>
				</div>
				<div class="col-sm-4">
					<%= f.text_field :name, class: "form-control", placeholder: "College Name", autofocus: true %>
				</div>
			</div>

			<div class="form-group"> <!-- address -->
				<div class="control-label col-sm-2">
					<%= f.label :address %>
				</div>
				<div class="col-sm-4">
					<%= f.text_area :address, class: "form-control", placeholder: "College Address", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit class: 'btn btn-primary btn-lg' %>
					</div>
				</div>

		<% end %>
	</div>
</div>