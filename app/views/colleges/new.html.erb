<div class="card mb-3">
  <div class="card-header" style="background-color:#0050be">
    <h3 align="center" style="color:white"> CREATING NEW AGENCY </h3>
  </div>
</div>

<div class='row'>
	<div class='col-sm-12'>
		<%= form_for(@college, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			
			<div class="form-group"> <!-- name -->
				<div class="control-label col-sm-2">
					<%= f.label :name %>
				</div>
				<div class="col-sm-4">
					<%= f.text_field :name, class: "form-control", placeholder: "Agency Name", autofocus: true %>
				</div>
			</div>

			<div class="form-group"> <!-- address -->
				<div class="control-label col-sm-2">
					<%= f.label :address %>
				</div>
				<div class="col-sm-4">
					<%= f.text_area :address, class: "form-control", placeholder: "Agency Address", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit "Create Agency", class: 'btn btn-primary btn-lg' %>
					</div>
				</div>

		<% end %>
	</div>
</div>

<%= link_to "BACK", :back, class: 'btn btn-sm btn-info btn-lg' %></br></br>