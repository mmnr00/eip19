<div class="card mb-3">
  <div class="card-header" style="background-color:#0050be">
    <h3 align="center" style="color:white"> EDITING <%= @college.name %> </h3>
  </div>
</div>

<div class='row'>
  <div class='col-lg-12'>
    <%= form_for(@college, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <!-- name -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Expense", autofocus: true %>
        </div>
      </div>

      <!-- description -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :address, class: "form-control", placeholder: "Name of Expense", autofocus: true %>
        </div>
      </div>

      

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Update Agency", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
    <%= link_to "DELETE AGENCY", college_path(@college), class: "btn btn-md btn-success active", method: :delete, data: {confirm: "Are You Sure?"} %> 
  </div>

</div>