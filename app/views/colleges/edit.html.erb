<h1> Editing <%= @college.name %> </h1>

<div class='row'>
  <div class='col-lg-12'>
    <%= form_for(@college, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <!-- name -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Expense", autofocus: true %>
        </div>
      </div>

      <!-- description -->
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :address, class: "form-control", placeholder: "Name of Expense", autofocus: true %>
        </div>
      </div>

      

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
    <%= link_to "DELETE COLLEGE", college_path(@college), class: "btn btn-md btn-success active", method: :delete, data: {confirm: "Are You Sure?"} %> 
  </div>

</div>