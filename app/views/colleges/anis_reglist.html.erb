<div class="card ">
  <div class="card-header">
    REGISTRATION LIST FOR ANiS 2019 <br>
    <strong>(CURRENT REGISTRATION: <%= @tchdetails.count %> PERSON)</strong>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th style="background-color:#d8b2d8"> NO </th>
            <th style="background-color:#d8b2d8"> NAME </th>
            <th style="background-color:#d8b2d8"> TASKA NAME </th>
            <th style="background-color:#d8b2d8"> TASKA ADDRESS </th>
          </tr>
        </thead>
        <tbody>
          <% counter = 1 %>
          <% @tchdetails.order('name ASC').each do |tch| %>
          <tr>
            <td><%= counter %></td>
            <td><%= tch.name %></td>
            <td><%= tch.ts_name %></td>
            <td>
              <%= tch.ts_address_1 %><br>
              <%= tch.ts_address_2 %><br>
              <%= tch.city %><br>
              <%= "#{tch.ts_states} #{tch.ts_postcode}" %><br>
            </td>
          </tr>
          <% counter = counter + 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>