

<%= form_for(@skid, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>KID DIAGNOSED WITH DELAY?</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :dely, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.dely), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>DELAY DESCRIPTION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :delydesc, class: "form-control", placeholder: "Optional", autofocus: true %>
      </div>
    </div>
  </div>

  <h5>Type of Delays</h5>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>PHYSICAL</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :phy, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.phy), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>COGNITIVE</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :cog, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.cog), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>COMMUNICATION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :comm, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.comm), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>SOCIAL/EMOTION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :soc, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.soc), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>SELF ADAPTATION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :adap, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.adap), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>DID KID RECEIVE REFER LETTER?</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :reflt, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.reflt), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>NOTE</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :otnt, class: "form-control", placeholder: "Optional", autofocus: true %>
      </div>
    </div>
  </div>

  <%= f.hidden_field :ekid_id, value: @ekid.id %>

  <!-- SUBMIT BUTTON -->
  <div class="form-group">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10 col-4">
        <%= f.submit :"SUBMIT",  class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>