<%= form_for(@skid, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <h4><u>SCREENING DETAILS</u></h4>
  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>KID DIAGNOSED WITH DELAY?</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :dely, options_for_select(["Yes", 
                                              "No",
                                              "Others"], 
                                              selected: @skid.dely), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>DELAY DESCRIPTION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :delydesc, class: "form-control", placeholder: "Optional", autofocus: true %>
      </div>
    </div>
  </div>

  <h5><u>TYPE OF DELAYS</u></h5>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>PHYSICAL</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :phy, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.phy), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>COGNITIVE</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :cog, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.cog), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>COMMUNICATION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :comm, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.comm), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>SOCIAL/EMOTION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :soc, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.soc), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>SELF ADAPTATION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :adap, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.adap), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>DID KID RECEIVE REFER LETTER?</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.select :reflt, options_for_select(["Yes", 
                                              "No"], 
                                              selected: @skid.reflt), 
        {include_blank: "SELECT"}, {required: true} %>
      </div>
    </div>
  </div>

  <h4><u>DIAGNOSIS DETAILS</u></h4><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>DIAGNOSIS</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :diag, class: "form-control", placeholder: "", autofocus: true, value: @skid.diag %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>SUMMARY</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :summ, class: "form-control", placeholder: "", autofocus: true, value: @skid.summ %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>ASSESSMENT RESULT: LEARNING/DEVELOPMENT/SCHEDULE OF GROWING SKILLS</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :assr, class: "form-control", placeholder: "", autofocus: true, value: @skid.assr %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>OBSERVATION OF BEHAVIOUR/ OTHER OUTSTANDING ISSUES:</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :obs, class: "form-control", placeholder: "", autofocus: true, value: @skid.obs %>
    </div>
  </div><br>

  <h4><u>PLAN/RECOMMENDATION</u></h4><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>REFERRAL FOR THERAPY: SPEECH, PHYSIOTHERAPY, OCCUPATIONAL THERAPY, EIP CENTER</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :refc, class: "form-control", placeholder: "", autofocus: true, value: @skid.refc %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>OKU FORM(JKM) REGISTRATION</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :frmo, class: "form-control", placeholder: "", autofocus: true, value: @skid.frmo %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>SCHOOL PLACEMENT</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :scp, class: "form-control", placeholder: "", autofocus: true, value: @skid.scp %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>OTHER RECOMMENDATIONS</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :cmt, class: "form-control", placeholder: "", autofocus: true, value: @skid.cmt %>
    </div>
  </div><br>

  <div class="form-group"> 
  <div class="row">
    <div class="control-label col-sm-12">
      <strong>OVERALL COMMENT</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-12">
      <%= f.text_area :ovc, class: "form-control", placeholder: "", autofocus: true, value: @skid.ovc %>
    </div>
  </div><br>

  <%= f.hidden_field :ekid_id, value: @ekid.id %>
  <%= f.hidden_field :stat, value: true %>

<br>
  <!-- SUBMIT BUTTON -->
  <div class="form-group">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10 col-4">
        <%= f.submit :"SUBMIT",  class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>