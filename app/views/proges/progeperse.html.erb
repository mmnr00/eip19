<div class="cards shadow mb-4">
  <div class="card-header">
    <b><%= @proge.name %></b> (<%= @perses.count%> penyertaan)
    <%= link_to "Kembali ke Senarai Program", progeindex_path, class: 'badge badge-pill badge-success' %> 
    <%= link_to "Send Email to All", progeindex_path, class: 'badge badge-pill badge-danger' %> 
  </div>

  <div class="card-body">
      
    <div class="table table-responsive border" style="font-size:13px">
      <table class="table table-bordered table-striped shadow" id="dataTable" width="100%" cellspacing="0" style="color: black">
        <thead>
          <tr class="shadow">
            <th style="background-color:#ffb2b2; width: 12%">NO</th>
            <th style="background-color:#ffb2b2; width:">NAMA</th>
            <th style="background-color:#ffb2b2; width:">NO MYKAD</th>
            <th style="background-color:#ffb2b2; width:">SIJIL</th>
          </tr>
        </thead>
        <tbody>
          <% cnt = 1 ;@perses.each do |prs| %>

            <tr>
              <td><%= cnt %></td>
              <td><%= prs.name %></td>
              <td><%= prs.ic %></td>
              <td>
                <%= link_to "Link Sijil", progecert_path(perse: prs.id, proge: @proge.id), target: "_blank" %>
              </td>
            </tr>

          <% cnt = cnt + 1;end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
