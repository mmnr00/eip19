<%
  tp = nil
  if params[:typ] == "reg"
    tp = "REGISTRATION FOR"
  elsif params[:typ] == "att"
    tp = "ATTENDANCE FOR"
  end
%>

<h5> <%= "#{tp} #{@proge.name}" %> </h5>

<div class="col-sm-6 bg-white">
  <%= form_tag findperse_path, remote: true, method: :get, id: "find_kid" do %>
    <div class="form-group text-center col-md-12">
      <br><strong></strong>
      <div class="row">
        <div class="col-sm-12 col-12">
          <%= number_field_tag :ic, params[:ic], 
                  placeholder: "e.g 870829355647 (no dash)",
                  autofocus: true, 
                  class: "form-control search-box input-lg", 
                  style: "text-transform:uppercase",
                  required: true %>
        </div>
        <%= hidden_field_tag :proge, params[:proge], value: params[:proge] %>
        <%= hidden_field_tag :typ, params[:typ], value: params[:typ] %>
          
        </div>
      </div>
      <div class="form-group col-md-12">
        <%= button_tag(type: :submit, class: "btn btn-sm btn-info", id: "submit_expense") do %>
            <i class="fa fa-search"></i> FIND 
        <% end %>
      </div>
      <div id="result_kid">
        <%= render 'proges/result' %> 
      </div>
    </div>
  <%end%>
</div>