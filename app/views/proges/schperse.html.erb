<%
  tp = nil
  if params[:typ] == "reg"
    tp = "REGISTER FOR"
  elsif params[:typ] == "att"
    tp = "ATTENDANCE FOR"
  end
%>


<h1> Search Perse </h1>
<h3> <%= "#{tp} #{@proge.name}" %> </h3>

<div class="col-sm-6 bg-white">
  <%= form_tag findperse_path, remote: true, method: :get, id: "find_kid" do %>
    <div class="form-group text-center col-md-12">
      <br><strong>MASUKKAN NO K/P UNTUK SEMAK PENDAFTARAN<br><br></strong>
      <div class="row">
        <div class="col-sm-4 col-4">
          <%= text_field_tag :ic, params[:ic], 
                  placeholder: "",
                  autofocus: true, 
                  class: "form-control search-box input-lg", style: "text-transform:uppercase" %>
        </div>
        <%= hidden_field_tag :proge, params[:proge], value: params[:proge] %>
        <%= hidden_field_tag :typ, params[:typ], value: params[:typ] %>
          <%= button_tag(type: :submit, class: "btn btn-sm btn-success active", id: "submit_expense") do %>
              <i class="fa fa-search"></i> CARI
          <% end %>
        </div>
      </div>
      <div id="result_kid">
        <%= render 'proges/result' %> 
      </div>
    </div>
  <%end%>
</div>