<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@proge, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
        
        <div class="form-group"> <!-- name -->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NAME</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :name, class: "form-control", placeholder: "YOUR FULL NAME AS PER IC", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- DATE-->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>DATE</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.date_field :date, class: "form-control", placeholder: "e.g. 870829015436 (no dash)", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- VENUE-->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>VENUE</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :venue, class: "form-control", placeholder: "e.g. 0174151557 (no dash)", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- START-->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>START</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.time_field :start, class: "form-control", placeholder: "e.g. 870829015436 (no dash)", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <div class="form-group"> <!-- END-->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>END</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.time_field :end, class: "form-control", placeholder: "e.g. 870829015436 (no dash)", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-10 col-4">
              <%= f.submit :"UPDATE PROFILE",  class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>