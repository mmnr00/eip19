<% if params[:tp] == "reg" %>
<h2>REGISTRATION CONFIRMATION</h2>
<% elsif params[:tp] == "att" %>
<h2>ATTENDANCE CONFIRMATION</h2>
<% end %>

<% if @perproge.present? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered" width="100%" cellspacing="0">

      <tbody>
        <tr>
          <td style="background-color:#203764" colspan="2"><strong><font color="white"><h2 align="center"><%= @perproge.perse.name.upcase %></h2></font></strong></td>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td style="background-color:#0070C0" ><font color="white">ID PENDAFTARAN</font></td>
          <td style="background-color:#D9E1F2"><%= @perproge.id %></td>
        </tr>
        <tr>
          <td style="background-color:#0070C0" ><font color="white">NO K/P</font></td>
          <td style="background-color:#D9E1F2"><%= @perproge.perse.ic %></td>
        </tr>
        <tr>
          <td style="background-color:#0070C0" ><font color="white">NAMA PROGRAM</font></td>
          <td style="background-color:#D9E1F2"><%= @perproge.proge.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
<% if params[:tp] == "att" %>
<%= link_to "https://www.eipepic.my/attendance", class: "btn btn-sm btn-primary active" do %>
  <i class="fa fa-arrow-right"></i> NEXT
<% end %>
<% end %>