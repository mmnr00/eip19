<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2 class="panel-title" align="center"><%= @tchdetail.name %></h2>
    </div>
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h4 class="panel-title" align="center">
          <% 
            tp = @tchdetail.teacher.tp
            if tp == "at"
              typ = "AUDIOLOGIST"
            elsif tp == "st"
              typ = "SPEECH THERAPIST"
            elsif tp == "ot"
              typ = "OCCUPATIONAL THERAPIST"
            elsif tp == "pt"
              typ = "PHYSIO THERAPIST"
            end
          %>
          <%= typ %>
        </h4>
      </div><br>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3" align="center"> 
          <% image = @fotos.where(foto_name: "PROFILE PIC").first %>
          <% if image.present? && image.picture.present? %>
            <a href="<%="#{image.picture.url}"%>" target="_blank">
              <% if @pdf %>
                <%= wicked_pdf_image_tag(image.picture.url, size: "200x200") %>
              <% else %>
                <%= image_tag(image.picture.url, size: "200x200") %>
              <% end %>
            </a>
          <% else %>
            No photo uploaded
          <% end %>
         </div>
         <div class=" col-md-9 col-lg-9"> 
        <div class="table-responsive">
          
          <table class="table table-striped" id="" width="100%" cellspacing="0">
            <tbody>
              <tr>
                <td><strong>IC NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.ic_1}-""#{@tchdetail.ic_2}-""#{@tchdetail.ic_3}" %>
                </td>
              </tr>
              <tr>
                <td><strong>GENDER</strong></td>
                <td>
                  <%= @tchdetail.gender %>
                </td>
              </tr>
              <tr>
                <td><strong>DATE OF BIRTH</strong></td>
                <td>
                  <%= @tchdetail.dob.strftime('%d/%m/%Y') %>
                </td>
              </tr>
              <tr>
                <td><strong>PHONE NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.phone_1}-""#{@tchdetail.phone_2}" %>
                </td>
              </tr>
              <tr>
                <td><strong>EMAIL:</strong></td>
                <td>
                  <% if @tchdetail.teacher.present? %>
                    <%= "#{@tchdetail.teacher.email}" %>
                  <% else %>
                    <%= "#{@tchdetail.email}" %>
                  <% end %>
                </td>
              </tr>
              
              <tr>
                <td><strong>ADDRESS:</strong></td>
                <td>
                  <%= "#{@tchdetail.address_1}" %><br>
                  <%= "#{@tchdetail.address_2}" %><br>
                  <%= "#{@tchdetail.city}" %>
                  <%= "#{@tchdetail.states}" %>
                  <%= "#{@tchdetail.postcode}" %>
                </td>
              </tr>
              <tr>
                <td><strong>CURRENT EMPLOYER:</strong></td>
                <td>
                  <%= "#{@tchdetail.marital}" %>
                </td>
              </tr>
              <tr>
                <td><strong>CERTIFICATION NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.category}" %>
                </td>
              </tr>
              <% if !@pdf %>
              <tr>
                <td><strong>CERTIFICATION DOCUMENT</strong></td>
                <td>

                  <% image = @fotos.where(foto_name: "CERT").first %>
                  <% if image.present? && image.picture.present? %>
                    <a href="<%="#{image.picture.url}"%>" target="_blank">
                      <% if @pdf %>
                        <%= wicked_pdf_image_tag(image.picture.url, size: "50x50") %>
                      <% else %>
                        <%= image_tag(image.picture.url, size: "50x50") %>
                      <% end %>
                    </a>
                  <% else %>
                    No photo uploaded &nbsp
                  <% end %>

                  
                
                </td>
              </tr>
              <% end %>
              
              
            </tbody>
          </table>