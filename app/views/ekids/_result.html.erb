<%= render partial: "shared/flash_messages", flash: flash %>
<% if @ekid.present? %>
  <% @ekid.each do |prs| %>
    <div class="col-12">
      <div class="frontside">
        <div class="card">
          <div class="card-body text-center">

            <h4><%= prs.name.upcase %></h4>
            <p class="card-text">
              <strong><%= prs.ic %></strong>
            </p>

            <% if params[:adm].present? %> <!-- FOR ADMIN SEARCH -->
              <%
                diff = (Date.today.year*12+Date.today.month) - (prs.dob.year*12+prs.dob.month)
                year = diff/12
                month = diff - year*12
              %>
              <b>PHONE NO : </b>&nbsp&nbsp <%= prs.mph %><br>
              <b>AGE : </b>&nbsp&nbsp <%= "#{year} Years, #{month} Months" %><br>
              <b>INCOME : </b>&nbsp&nbsp <%= prs.pinc %><br>
              <b>SIBLINGS : </b>&nbsp&nbsp <%= prs.sib %><br>
              <b>STATUS : </b>&nbsp&nbsp <%= prs.stat %><br>
              <b>LOCATION : </b>&nbsp&nbsp <%= prs.prefloc %><br>
              <br>

            <% elsif params[:sce].present? %> <!-- FOR SCREENING SEARCH -->
              <%
                  diff = (Date.today.year*12+Date.today.month) - (prs.dob.year*12+prs.dob.month)
                  year = diff/12
                  month = diff - year*12
                %>
                <b>PHONE NO : </b>&nbsp&nbsp <%= prs.mph %><br>
                <b>AGE : </b>&nbsp&nbsp <%= "#{year} Years, #{month} Months" %><br>
                <b>INCOME : </b>&nbsp&nbsp <%= prs.pinc %><br>
                <b>SIBLINGS : </b>&nbsp&nbsp <%= prs.sib %><br>
                <b>STATUS : </b>&nbsp&nbsp <%= prs.stat %><br>
                <b>LOCATION : </b>&nbsp&nbsp <%= prs.prefloc %><br>
                <br>
              <%
                alreg = false
                if (prs.stat == "ATT") && (prs.admloc == $admloc[@admin.id]) #&& (!prs.sce_id == params[:sce].to_i)
                  butn = "success"
                  coftx = "CONFIRM ATTENDANCE"
                elsif (prs.stat == "CONFIRM") && (prs.admloc == $admloc[@admin.id]) #&& (!prs.sce_id == params[:sce].to_i)
                  butn = "success"
                  coftx = "CHECK IN AND CONFIRM"
                elsif prs.sce_id == params[:sce].to_i
                  alreg = true
                  butn = "info"
                  coftx = "ALREADY REGISTERED"
                elsif prs.sce_id.present? && prs.sce_id != params[:sce].to_i
                  alreg = true
                  scet = Sce.find(prs.sce_id)
                  butn = "info"
                  coftx = "ALREADY REGISTERED TO #{scet.name}"
                else
                  butn = "danger"
                  coftx = "CHILDREN NOT IN THE FINAL LIST. CONFIRM ATTENDANCE?"
                end
              %>

              <% if alreg %>
                <%= link_to "#", class:"btn btn-sm btn-#{butn}" do %>
                  <i class="fa fa-edit"></i> <%= "#{coftx}"%>
                <% end %>
              <% else %>
                <%= link_to confsce_path(id: params[:sce], ekid: prs.id), class:"btn btn-sm btn-#{butn}" do %>
                  <i class="fa fa-edit"></i> <%= "#{coftx}"%>
                <% end %>
              <% end %>

            <% elsif params[:att].present? %> <!-- FOR CHECK IN -->

              <!-- 

              conditions for check in 
              adm_loc kena sama
              sce_present or not
                sce_present? current sce or other
              sce not present?
                check stat only can check in
              3 conditions: 
                Sce not current
                Sce current
                  check-in 
                  confirm
                Sce not available
                  Confirm
                  Not Confirm

              -->
              <%
                scex = false
                scurr = false
                @scstat = false
                sta = false
                if prs.sce_id.present?
                  scex = true
                  sc=Sce.find(prs.sce_id)
                  if sc.id == Sce.where(curr: true, loc: params[:loc]).first.id
                    scurr = true
                    if prs.stat == "CONF"
                      @scstat = true
                    end
                  end
                else
                  if prs.stat == "CONFIRM"
                    sta=true
                  end
                end
              %>
              <% if scex %>

                <% if scurr %>

                  <% if @scstat %>
                    <%= link_to "ATTENDANCE CONFIRMED", "#", class:"btn btn-sm btn-warning" %>
                  <% else %>
                    <%= link_to "CHECK-IN CONFIRMED", "#", class:"btn btn-sm btn-warning" %>
                  <% end %>

                <% else %>
                  <%= link_to "#{sc.name} (#{sc.date.strftime('%d-%^b-%y')})", "#", class:"btn btn-sm btn-warning" %>
                <% end %>

              <% else %>

                <% if sta %>
                  <%= link_to "CHECK IN", prtchkin_path(id: prs.id, loc:params[:loc]), class:"btn btn-sm btn-warning" %>
                <% else %>
                  <%= link_to "NOT IN FINAL LIST", "#", class:"btn btn-sm btn-warning" %>
                <% end %>

              <% end %>
              

            <% else %> <!-- FOR PARENT SEARCH -->

              <% if prs.pkid.blank? %>
                <b>PROFIL TIDAK LENGKAP. SILA KLIK 'UBAH'</b> <br><br>
              <% end %>

              <h6>STATUS : 
              <% if (sce=prs.sce).present? && params[:att].blank? %>
                <%= sce.name.upcase %></h6>
              <% else %>
                <%= $statekid[prs.stat] %></h6>
              <% end %>

           
              <%= link_to edit_ekid_path(id: prs.id), class:"btn btn-sm btn-warning" do %>
                <i class="fa fa-edit"></i> UBAH
              <% end %>

            <% end %>

            <%= link_to ekidconf_path(id: prs.id), class:"btn btn-sm btn-info", target: "_blank" do %>
              <i class="fa fa-eye"></i> PROFIL
            <% end %>
            
                          
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% elsif @ekid.blank? && params[:ic].present? && !params[:adm].present? && !params[:sce].present? %>

  <%= link_to new_ekid_path(ic: params[:ic]), class:"btn btn-sm btn-success" do %>
    <i class="fa fa-edit"></i> KLIK DISINI UNTUK TERUSKAN PENDAFTARAN
  <% end %>
<% end %> 

  




